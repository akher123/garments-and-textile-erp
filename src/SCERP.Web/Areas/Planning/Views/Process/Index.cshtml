@using SCERP.Common
@model SCERP.Web.Areas.Planning.Models.ViewModels.ProcessViewModel
@{
    ViewBag.Title = "Process";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Process List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("Index", "Process", FormMethod.Get, new { @class = "ProcessSearchForm submit-allow" }))
        {
        @Html.HiddenFor(x => x.IsSearch)

        <table>
            <tr>
                <td>
                    @Html.Label("Criteria")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.ProcessName, new { @data_val = "false", @placeholder = "Search key" })
                </td>
                <td>
                    <input type="button" class="searchAction" />
                </td>
            </tr>
        </table>

        }
    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Planning/Process/Edit">Add New</button>
        </div>
        @{
        var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.Processes, rowCount: Model.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
        tableStyle: "webgrid-table webgrid",
        headerStyle: "webgrid-header",
        footerStyle: "webgrid-footer",
        alternatingRowStyle: "webgrid-alternating-row",
        selectedRowStyle: "webgrid-selected-row",
        rowStyle: "webgrid-row-style",
        firstText: "First",
        lastText: "Last",
        nextText: "Next",
        mode: WebGridPagerModes.All,
        previousText: "Previous",
        columns:
        grid.Columns(
        grid.Column("ProcessRefId", header: "Ref No"),
        grid.Column("ProcessName", header: "Process"),
        grid.Column("ProcessCode", header: "ProcessCode"),
        grid.Column("BufferDay", header: "BufferDay"),
        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Planning/Process/Edit?ProcessId=@item.ProcessId"></button></text>),
        grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/Planning/Process/Delete?ProcessRefId=@item.ProcessRefId"></button></text>)));
        }
    </div>
</section>
