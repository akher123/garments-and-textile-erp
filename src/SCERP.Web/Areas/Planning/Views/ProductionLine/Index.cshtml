@using SCERP.Common
@model SCERP.Web.Areas.Planning.Models.ViewModels.ProductionLineViewModel
@{
    ViewBag.Title = "ProductionLine";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.ProductionLines.Count > 0) ? "" : "none";
}
@using (Html.BeginForm("Index", "ProductionLine", FormMethod.Get, new { @class = "ProductionLineSearchForm ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="width: 500px; padding-left: 340px;">
        <h3>Production Line</h3>
    </div>
    Html.RenderPartial("~/Areas/Planning/Views/ProductionLine/_SearchProductionLine.cshtml", Model);
}
<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/Planning/ProductionLine/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.ProductionLines, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                    grid.Column("BranchUnitDepartment.UnitDepartment.Department.Name", header: "Department ", format: @<text>@(item.BranchUnitDepartment.UnitDepartment.Department == null ? "" : item.BranchUnitDepartment.UnitDepartment.Department.Name)</text>),
                    grid.Column("Line.Name", header: "Line ", format: @<text>@(item.Line == null ? "" : item.Line.Name)</text>),
                    grid.Column(".BranchUnitDepartmentUnitDepartment.Unit.Name", header: "Unit ", format: @<text>@(item.BranchUnitDepartment.UnitDepartment.Unit == null ? "" : item.BranchUnitDepartment.UnitDepartment.Unit.Name)</text>),
                    grid.Column("BranchUnitDepartment.BranchUnit.Branch.Company.Name", header: "Company ", format: @<text>@(item.BranchUnitDepartment.BranchUnit.Branch.Company == null ? "" : item.BranchUnitDepartment.BranchUnit.Branch.Company.Name)</text>),
                    grid.Column("BranchUnitDepartment.BranchUnit.Branch.Name", header: "Branch ", format: @<text>@(item.BranchUnitDepartment.BranchUnit.Branch == null ? "" : item.BranchUnitDepartment.BranchUnit.Branch.Name)</text>),
                    grid.Column("Detail/Edit",canSort:false,format:@<text><button class="edit" action="/Planning/ProductionLine/Edit?ProductionLineId=@item.ProductionLineId"></button></text>),
                    grid.Column("Delete",format:
                    @<text><button class="delete" action="/Planning/ProductionLine/Delete?ProductionLineId=@item.ProductionLineId"></button></text>, canSort: false)));
        }
    </div>
    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "ProductionLine", new { SearchByCompanyId = Model.SearchFieldModel.SearchByCompanyId, SearchByBranchId = Model.SearchFieldModel.SearchByBranchId, SearchByBranchUnitId = Model.SearchFieldModel.SearchByBranchUnitId, SearchByBranchUnitDepartmentId = Model.SearchFieldModel.SearchByBranchUnitDepartmentId, SearchByLineId = Model.SearchFieldModel.SearchByLineId })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "ProductionLine", new { SearchByCompanyId = Model.SearchFieldModel.SearchByCompanyId, SearchByBranchId = Model.SearchFieldModel.SearchByBranchId, SearchByBranchUnitId = Model.SearchFieldModel.SearchByBranchUnitId, SearchByBranchUnitDepartmentId = Model.SearchFieldModel.SearchByBranchUnitDepartmentId, SearchByLineId = Model.SearchFieldModel.SearchByLineId })" title="print" src="~/Content/images/print-icon.png" />
    </div>
</section>

