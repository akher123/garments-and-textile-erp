@model SCERP.Model.Custom.ExludedEmployeeFromSalaryProcessInfoCustomModel

@{
    ViewBag.Title = (Model.ExcludedEmployeeFromSalaryProcessId > 0) ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}
@using (Html.BeginForm("Save", "ExcludedEmployeeFromSalaryProcess", FormMethod.Post, new { @class = "ExcludedEmployeeFromSalaryProcessInfoform" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ExcludedEmployeeFromSalaryProcessId)

    <fieldset>
        <legend>Excluded employee from salary process information</legend>

        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="2">@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
            </tr>
            <tr>
                <td class="fieldTitleCls">Employee ID :</td>
                <td>
                    @Html.TextBoxFor(x => x.EmployeeCardId, new { @class = "employeeCardId" })
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    <input class="addButton" action="/Payroll/ExcludedEmployeeFromSalaryProcess/GetEmployeeDetailByEmployeeCardID" type="button" id="filterbyEmployeeCadrId" value="Find" />
                </td>
            </tr>
        </table>


        <table class="tabefont">
            <tr id="employeeDetail_containner">
                @if (Model.EmployeeCompanyInformation != null && Model.EmployeeCompanyInformation.EmployeeCompanyInfoId > 0)
                {
                    {
                        Html.RenderPartial("~/Areas/HRM/Views/Penalty/_EmployeeDetails.cshtml", Model.EmployeeCompanyInformation);
                    }
                }
            </tr>
        </table>

        <table class="tabefont">
            <tr>
                <td class="fieldTitleCls">Year:</td>
                <td>
                    @Html.DropDownListFor(x => x.Year, Model.Years, "-Select-")
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>

            <tr>
                <td class="fieldTitleCls">Month:</td>
                <td>
                    @Html.DropDownListFor(x => x.Month, Model.Months, "-Select-")
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>

            <tr>
                <td class="fieldTitleCls">From Date:</td>
                <td>         
                    @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td class="fieldTitleCls">To Date:</td>
                <td>                 
                    @Html.TextBoxFor(x => x.ToDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td class="fieldTitleCls">Remarks:</td>
                <td>
                    @Html.TextAreaFor(m => m.Remarks)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}

@section scripts
{
    <script src="~/Scripts/SCERP/HRM/FilterEmployee.js"></script>
}


