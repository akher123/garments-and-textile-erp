@using SCERP.Common
@model SCERP.Web.Areas.Payroll.Models.ViewModels.BonusRuleViewModel
@{ ViewBag.Title = "Bonus Rule";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Bonus Rule List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "BonusRule", FormMethod.Get, new {@class = "HourForm submit-allow"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Payroll/BonusRule/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.BonusRules, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("BonusRoleRefId", header: "RefId"),
                        grid.Column("Title", header: "Tile"),
                        grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.EffectiveDate ?? ""), header: "Effective Date"),
                        grid.Column("MoreThanOneYear", header: "Experiance=>OneYear(%)"),
                        grid.Column("MoreThanSixLessOneYear", header: "SixMonth<=Experiance<OneYear(%)"),
                        grid.Column(format: (item) => string.Format("{0}", item.IsProcessed=="Y"? "YES":"NO"), header: "Processed"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Payroll/BonusRule/Edit?BonusRule.BonusRuleId=@item.BonusRuleId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Payroll/BonusRule/Delete?BonusRuleId=@item.BonusRuleId"></button></text>)))
            ;
        }
    </div>
</section>





