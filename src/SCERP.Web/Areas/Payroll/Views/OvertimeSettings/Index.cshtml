@using SCERP.Common
@model SCERP.Web.Areas.Payroll.Models.ViewModels.OvertimeSettingsViewModel
@{
    ViewBag.Title = "Overtime";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.OvertimeSettings.Count > 0) ? "" : "none";
}
<section class="search formCover">
    <div class="additem">
        <div style="width:500px; padding-left:340px;">
            <h2>Overtime Rate Settings</h2>
        </div>
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/Payroll/OvertimeSettings/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.OvertimeSettings, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                    grid.Column("OvertimeHours", header: "Overtime Hours"),
                    grid.Column("OvertimeRate", header: "Overtime Rate"),
                    grid.Column("FromDate", header: "FromDate", format: @<text>@(item.FromDate == null ? "" : item.FromDate.ToString("dd-MM-yyyy"))</text>,canSort: false),
                    grid.Column("ToDate", header: "ToDate", format: @<text>@(item.ToDate == null ? "" : item.ToDate.ToString("dd-MM-yyyy"))</text>,canSort: false),
                grid.Column("Detail/Edit", canSort: false, format: @<button class="edit" action="/Payroll/OvertimeSettings/Edit/@item.Id"></button>),
                grid.Column("Delete",canSort:false,format:@<button class="delete" action="/Payroll/OvertimeSettings/Delete/@item.Id"></button>)))
        }
    </div>
</section>

