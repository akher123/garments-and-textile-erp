@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.ItemTypeViewModel
@{ 
     ViewBag.Title = "ItemType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div style="width:500px; padding-left:340px;">
    <h2>Item Type List</h2>
</div>
<section class="search formCover">
    <div style="background-color: #46B9AF; ">
        <div style="margin-left: 250px;">
            @using (Html.BeginForm("Index", "ItemType", FormMethod.Get, new { @class = "ItemTypeForm" }))
            {
                @Html.HiddenFor(x => x.ItemType.ItemTypeId)
                <table>
                    <tr>
                        <td>
                            @Html.Label("Title ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.ItemType.Title)
                        </td>
                        <td>
                            <input type="button" class="searchAction" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup" action="/Merchandising/ItemType/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.ItemTypes, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                  grid.Columns(
                  grid.Column("Title", header: "Title"),
                  grid.Column("Description",header: "Description"),
                  grid.Column("Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/ItemType/Edit?ItemType.ItemTypeId=@item.ItemTypeId"></button></text>),
                  grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/ItemType/Delete?ItemTypeId=@item.ItemTypeId"></button></text>)));
        }
    </div>
</section>


