@model SCERP.Web.Areas.Merchandising.Models.ViewModel.MerchandisingReportViewModel
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Style wise Production Details</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("StyleProductionDetail", "Report", FormMethod.Get, new {@class = "StyleProductionDetailForm"}))
        {
            @Html.HiddenFor(x => x.IsShowReport)
            @Html.ValidationSummary(true)
            <table>
                <tr>
                    <td>
                        @Html.Label("", "Buyer")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.BuyerRefId, Model.BuyerSelectListItem, new {@class = "KnittingProgram_BuyerRefId"})
                    </td>
                    <td>
                        @Html.Label("*", new {@class = "labelInstruction"})
                    </td>

                    <td>
                        @Html.Label("", "Order")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.OrderNo, Model.OrderSelectListItem, new {@class = "KnittingProgram_OrderNo"})
                    </td>
                    <td>
                        @Html.Label("*", new {@class = "labelInstruction"})
                    </td>
              
                    <td>
                        @Html.Label("", "Style")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.OrderStyleRefId, Model.StylesSelectListItem, new {@class = "KnittingProgram_StyleNo"})
                    </td>
                    <td>
                        @Html.Label("*", new {@class = "labelInstruction"})
                    </td>

                    <td>
                        <input type="button" class="showRdlcReport addButton" value="Show"/>
                    </td>
                </tr>
            </table>
        }

    </div>
    <div class="custom-iframe-wrapper">
        <iframe id="reportIfram" width="98%" height="400"></iframe>
    </div>
</section>

@section scripts
{
    <script type="text/javascript">
        $('.KnittingProgram_BuyerRefId').unbind('change').bind('change', function () {
            var buyerRefId = $(this).val();
            $.Ajax({
                url: '/KnittingProgram/GetOrderByBuyer/',
                data: { buyerRefId: buyerRefId }
            }).done(function (orderList) {
                $('.KnittingProgram_OrderNo').empty();
                if (orderList.length > 0) {
                    populateDropDown({ OrderNo: "", RefNo: "Select" });
                    $.each(orderList, function (order) {
                        populateDropDown({ OrderNo: this.OrderNo, RefNo: this.RefNo });
                    });
                } else {
                    populateDropDown({ RefNo: "No Order Found", OrderNo: "" });
                }
            });
        });


        function populateDropDown(obj) {
            $('.KnittingProgram_OrderNo').append(
                $('<option/>').attr('value', obj.OrderNo).text(obj.RefNo)
            );
        }

        $('.KnittingProgram_OrderNo').unbind('change').bind('change', function () {
            var orderNo = $(this).val();
            $.Ajax({
                url: '/KnittingProgram/GetStyleByOrderNo/',
                data: { orderNo: orderNo }
            }).done(function (styleList) {
                $('.KnittingProgram_StyleNo').empty();
                if (styleList.length > 0) {
                    $('.KnittingProgramt_StyleNo').append(
                        $('<option/>').attr('value', '').text("Select")
                    );
                    $.each(styleList, function (style) {
                        $('.KnittingProgram_StyleNo').append(
                            $('<option/>').attr('value', this.OrderStyleRefId).text(this.StyleNo)
                        );
                    });
                } else {
                    $('.KnittingProgram_StyleNo').append(
                        $('<option/>').attr('value', '').text("No Order Found")
                    );
                }
            });
        });
      
        $('.showRdlcReport').unbind('click').bind('click', function (e) {
            var form = $(this).parents('form:first');
            if (jQuery.validator && jQuery.validator.unobtrusive) {
                form.validate();
                if (!form.valid()) {
                    e.preventDefault();
                    return false;
                } else {
                    var data = form.serialize();
                    var searchurl = '/Merchandising/Report/StyleProductionDetail?' + data;
                    $('#reportIfram').attr('src', '');
                    $('#reportIfram').attr('src', searchurl);
                }
            }

        });
    </script>
}
