@model SCERP.Web.Areas.Merchandising.Models.ViewModel.TempGroupViewModel
@{

    ViewBag.Title = Model.TempGroup.TempGroupId > 0 ? "Edit " : "Add ";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}

@using (Html.BeginForm("Save", "TempGroup", FormMethod.Post, new { @class = "TempGroupForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.TempGroup.TempGroupId)
    <fieldset>
        <legend>Hour</legend>
        <table class="tabefont">
            <tr>
                <td>
                    @Html.Label("Temp Group Name:")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.TempGroup.TempGroupName)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}




