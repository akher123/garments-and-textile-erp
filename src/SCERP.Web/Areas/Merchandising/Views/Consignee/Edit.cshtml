@section scripts
{
    <script type="text/javascript">
        $('.Country_forCity').unbind('change').bind('change', function () {
            var countryId = $(this).val();
            $.Ajax({
                url: '/City/GetCityByCountry/',
                data: { CountryId: countryId }
            }).done(function (states) {
                $('.City_byCountry').empty();
                if (states.length > 0) {
                    $('.City_byCountry').append(

                            $('<option/>')
                                .attr('value', '')
                                .text("-Select-")
                        );
                    $.each(states, function (state) {
                        $('.City_byCountry').append(

                            $('<option/>')
                                .attr('value', this.CityId)
                                .text(this.CityName)
                        );
                    });
                } else {
                    $('.City_byCountry').append(
                        $('<option/>')
                            .attr('value', "")
                            .text("No City Found")
                    );
                }

            });


        });
        $('#consineeSaveButton').unbind('click').bind('click', function () {
            var $form = $(this).parents('form:first');
            var data = $form.serialize();
            if (jQuery.validator && jQuery.validator.unobtrusive) {
                $form.validate();
                if (!$form.valid()) {
                    e.preventDefault();
                    return false;
                } else {
                    $.Ajax({
                        url: $form.attr('action'),
                        dataType: 'json',
                        type: 'post',
                        data: data,
                    }).done(function (consineeList) {
                        $('#consigneeDropDown').empty();
                        if (consineeList.length > 0) {
                            $('#consigneeDropDown').append(
                          $('<option/>')
                              .attr('value', '')
                              .text("N/A")
                      );
                            $.each(consineeList, function (consinee) {
                                $('#consigneeDropDown').append(
                                    $('<option/>')
                                        .attr('value', this.ConsigneeRefId)
                                        .text(this.ConsigneeName)
                                );
                            });
                            $form.DialogClose();
                        } else {
                            alert("Not saved");
                        }

                    });
                }
            }
        });
    </script>
}

