@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.OmColorViewModel
@{
    ViewBag.Title = "Color";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Color</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "OmColor", FormMethod.Get, new {@class = "OmColorSearchForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        <b>@Html.Label("Criteria")</b>
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Merchandising/OmColor/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.OmColors, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("ColorRefId", header: " Ref #"),
                        grid.Column("ColorName", header: "Color Name"),
                        grid.Column("ColorCode", header: "Color Code"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/OmColor/Edit?ColorId=@item.ColorId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/OmColor/Delete?ColorRefId=@item.ColorRefId"></button></text>)));
        }
    </div>
</section>

