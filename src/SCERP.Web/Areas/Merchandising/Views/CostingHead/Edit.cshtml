@model SCERP.Model.Mrc_CostingHead
@{

    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
    ViewBag.Title = (Model.CostingHeadId > 0) ? "Edit" : "Add";
}
<div style="font-size: 12px;">
    @using (Html.BeginForm("Save", "CostingHead", FormMethod.Post, new { @class = "CostingHeadForm" }))
    {@Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CostingHeadId)
        @Html.HiddenFor(model => model.CreatedDate)

        <fieldset>
            <legend>Style Costing Head</legend>
            <table>
                <tr>
                    <td></td>
                    <td>@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
                </tr>
                <tr>

                    <td>
                        @Html.LabelFor(model => model.Title)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Title)
                    </td>
                    <td>
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.Title, "Required")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Description)
                    </td>
                    <td>
                        @Html.TextAreaFor(model => model.Description)
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>

                    <td>
                        @Html.SaveButton()
                    </td>
                    <td></td>
                </tr>
            </table>
        </fieldset>
        @Html.Partial("~/Views/Shared/_CustomError.cshtml")
    }

</div>















