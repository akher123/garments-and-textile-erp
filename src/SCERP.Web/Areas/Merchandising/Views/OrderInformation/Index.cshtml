@model IEnumerable<SCERP.Model.Mrc_OrderInformation>

@{
    ViewBag.Title = "Order Information";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class=" additem">
    
    @using (@Html.BeginForm("Index", "OrderInformation", FormMethod.Post, new {@class = "OrderInformationForm", name = "OrderInformationForm"}))
    {
        <div style="width: 500px; padding-left: 340px;">
            <h2>Order Information</h2>
        </div>
        
        <section class="search formCover" style="margin-bottom: 7px;; font-size: 12px;">

            <table>
                <tr>
                    <td>
                        @Html.Label("Buyer Name")
                    </td>

                    <td>
                        @Html.DropDownList("buyerId", null, "--select--", new {@class = "OrderInformation_Buyer", @action = "/Merchandising/OrderInformation/GetSepcSheetByBuyerId", @TargetClass = "OrderInformation_StyleNo"})
                    </td>
                    <td width="15px"></td>
                    <td>
                        @Html.Label("Style No")
                    </td>

                    <td>
                        @Html.DropDownList("StyleNo", null, "--select--", new {@class = "OrderInformation_StyleNo", @action = "/Merchandising/OrderInformation/GetJobNumberByStyleNo", @TargetClass = "OrderInformation_JobNumber"})
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Job Number")
                    </td>

                    <td>
                        @Html.DropDownList("SpecSheetId", null, "--select--", new { @class = "OrderInformation_JobNumber", @action = "/Merchandising/OrderInformation/GetOrderNoByJobNo", @TargetClass = "OrderInformation_OrderNumber" })
                    </td>
                    <td></td>
                    <td>
                        @Html.Label("Order Number")
                    </td>

                    <td>
                        @Html.DropDownList("OrderId", null, "--select--", new { @class = "OrderInformation_OrderNumber" })
                    </td>

                    <td>
                        <button class="search" type="button" onclick=" search('/Merchandising/OrderInformation/Search', 'OrderInformationForm') " />
                    </td>
                </tr>
            </table>

        </section>
    }

    <section class="search formCover">
        
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/Merchandising/OrderInformation/Edit">Add new</button>
        </div>

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: false, ajaxUpdateContainerId: "grid");
            grid.Bind(Model, rowCount: Model.Count(), autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(

                        grid.Column("Mrc_OrderInformation.Mrc_BuyerClient.ClientName", header: "Buyer Client", format: @<text>@(item.Mrc_BuyerClient == null ? "" : item.Mrc_BuyerClient.ClientName)</text>),
                        grid.Column("OrderNo", header: "Order No"),
                        grid.Column("ArticleNo", header: "Article No"),
                        grid.Column("ShipmentDate", header: "Shipment Date", format: @<text>@(item.ShipmentDate == null ? "" : item.ShipmentDate.ToString("dd/MM/yyyy"))</text>),
                        grid.Column("ExFactoryDateOnPO", header: "ExFactory Date On PO", format: @<text>@(item.ExFactoryDateOnPO == null ? "" : item.ExFactoryDateOnPO.ToString("dd/MM/yyyy"))</text>),
                        grid.Column("ExFactoryAsPerPlan", header: "ExFactory As Per Plan", format: @<text>@(item.ExFactoryAsPerPlan == null ? "" : item.ExFactoryAsPerPlan.ToString("dd/MM/yyyy"))</text>),
                        grid.Column("LeadTime", header: "Lead Time"),
                        grid.Column("TotalAmount", header: "Total Amount"),
                        grid.Column("Mrc_OrderInformation.Currency.Name", header: "Currency Name", format: @<text>@(item.Currency == null ? "" : item.Currency.Name)</text>),

                        grid.Column("Edit", format: @<text><button class="edit" action="/Merchandising/OrderInformation/Edit?OrderId=@item.OrderId"></button></text>),
                        grid.Column("Delete", format: @<text><button class="delete" action="/Merchandising/OrderInformation/Delete/@item.OrderId"></button></text>)
                        ))
            ;

        }
    </section>

</div>

@section scripts
{
    <script src="~/Scripts/SCERP/Merchandising/OrderInformation.js"></script>
}




