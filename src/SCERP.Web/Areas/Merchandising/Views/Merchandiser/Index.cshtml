@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.MerchandiserViewModel
@{
    ViewBag.Title = "Merchandiser";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Merchandiser</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "Merchandiser", FormMethod.Get, new {@class = "MerchandiserSearchForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)


            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Merchandising/Merchandiser/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Merchandisers, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                        grid.Columns(
                        grid.Column("EmpId", header: "Ref ID"),
                        grid.Column("EmpName", header: "Merchandiser"),
                        grid.Column("Phone", header: "Phone"),
                        grid.Column("Email", header: "	Email"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/Merchandiser/Edit?MerchandiserId=@item.MerchandiserId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/Merchandiser/Delete?EmpId=@item.EmpId"></button></text>)));
        }
    </div>
</section>



