@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.MCostingViewModel
@{
    ViewBag.Title = "Costing";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Costing Information</h2>
</div>

<section class="common-search-section">
        <div class="search formCover common-search-wrapper">

            @using (Html.BeginForm("Index", "Costing", FormMethod.Get, new { @class = "CostingSearchForm" }))
            {
                @Html.HiddenFor(x => x.IsSearch)
                <table class="tabefont">
                    <tr>
                        <td>
                            @Html.Label("Criteria")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                        </td>
                        <td>
                            <input type="button" class="searchAction" />
                        </td>
                    </tr>
                </table>

            }
        </div>
    </section>

<section class="search formCover">
    <div class="additem">

        <div class="addButton-wrapper">
            <input onclick="search('/Merchandising/Costing/Edit')" value="Add New" class="addButton" type="button" />
        </div>

        @*<div style="margin-bottom: 3px;">
                <button class="AjaxPopup addButton" action="/Merchandising/Costing/Edit">Add New</button>
            </div>*@

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.MCostings, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("BuyerName", canSort: false, header: "Buyer"),
grid.Column("BuyingHouse", canSort: false, header: "BuyingHouse"),

grid.Column("ItemName", canSort: false, header: "ItemName"),

grid.Column("Size", canSort: false, header: "Size"),
grid.Column("Fabrication", canSort: false, header: "Fabrication"),
grid.Column("Quantity", canSort: false, header: "Quantity"),
grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.ShipDate ?? ""), header: "Ship Date"),

grid.Column("Total", canSort: false, header: "Total"),
grid.Column("CostPerPcs", canSort: false, header: "Cost Per Pc"),


grid.Column("Edit", format:@<text>


                            <input onclick="search('/Merchandising/Costing/Edit?CostingId=@item.CostingId')" value="Edit" class="" type="button" />

</text>, canSort: false),
grid.Column("Delete", format:@<text> <button class="delete" action="/Merchandising/Costing/Delete?CostingId=@item.CostingId"></button></text>, canSort: false)

))
            ;
        }
    </div>
</section>

