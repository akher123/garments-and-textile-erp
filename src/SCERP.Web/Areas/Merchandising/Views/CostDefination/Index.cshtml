@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.CostDefinationViewModel
@{
    ViewBag.Title = "Component";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>COST DEFINITION</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "CostDefination", FormMethod.Get, new {@class = "CostDefinationSearchForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

    <section class="search formCover">
        <div class="additem">
            <div class="addButton-wrapper">
                <button class="AjaxPopup addButton" action="/Merchandising/CostDefination/Edit">Add New</button>
            </div>
            @{
                var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
                grid.Bind(Model.CostDefinations, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);
                @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
               previousText: "Previous",
               columns:
               grid.Columns(
               grid.Column("CostRefId", header: "Cost Ref."),
               grid.Column("CostName", header: "Cost Name"),
               grid.Column("CostGroup", header: "Group"),
               grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/CostDefination/Edit?CostDefinationId=@item.CostDefinationId"></button></text>),
               grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/CostDefination/Delete?CostRefId=@item.CostRefId"></button></text>)));
            }
        </div>
    </section>
