@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.PaymentTermViewModel
@{
    ViewBag.Title = "PaymentTerm";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Payment Term</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "PaymentTerm", FormMethod.Get, new {@class = "PaymentTermSearchForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Merchandising/PaymentTerm/Edit">Add New</button>
        </div>

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.OmPaymentTerms, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("PayTermRefId", header: "Ref No"),
                        grid.Column("PayTerm", header: "Pay Term"),
                        grid.Column("ECGCPerc", header: "ECGC(%)"),
                        grid.Column("InsurancePerc", header: "Insurance(%)"),
                        grid.Column("CreditDays", header: "Credit Days"),
                        grid.Column("PayType", header: "Pay Type"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/PaymentTerm/Edit?PayentTermId=@item.PayentTermId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/PaymentTerm/Delete?PayTermRefId=@item.PayTermRefId"></button></text>)));
        }
    </div>
</section>







