@using SCERP.Common
@model SCERP.Web.Areas.Merchandising.Models.ViewModel.OmSizeViewModel
@{
    ViewBag.Title = "Size";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Size</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "OmSize", FormMethod.Get, new { @class = "OmSizeSearchForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Merchandising/OmSize/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Sizes, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("SizeRefId", header: "Ref No"),
                        grid.Column("SizeName", header: "Size"),
                        grid.Column("ItemType", header: "Type"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Merchandising/OmSize/Edit?SizeId=@item.SizeId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Merchandising/OmSize/Delete?SizeRefId=@item.SizeRefId"></button></text>)));
        }
    </div>
</section>

