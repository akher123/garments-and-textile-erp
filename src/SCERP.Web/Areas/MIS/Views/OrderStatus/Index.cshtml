    <a onclick="loadOrderStystus('/MIS/OrderStatus/YarnStatus');" class="w3-bar-item w3-button w3-border-bottom  w3-padding-small">Yarn Status</a>
    <a onclick="loadOrderStystus('/MIS/OrderStatus/FabricStatus');" class="w3-bar-item w3-button w3-border-bottom  w3-padding-small">Fabric Status</a>
    <a onclick="loadOrderStystus('/MIS/OrderStatus/CuttingStatus');" class="w3-bar-item w3-button w3-border-bottom  w3-padding-small">Cutting Status</a>
    <a onclick="loadOrderStystus('/MIS/OrderStatus/BodyRejceReplacementStatus');" class="w3-bar-item w3-button w3-border-bottom  w3-padding-small">Body Recject Replace</a>
    <a onclick="loadOrderStystus('/MIS/OrderStatus/PrintingSatus');" class="w3-bar-item w3-button w3-border-bottom  w3-padding-small">Print Status</a>
