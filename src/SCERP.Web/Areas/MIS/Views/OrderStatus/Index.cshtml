@using System.Data
@model DataTable
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section styles{
    <link href="~/Content/W3.css" rel="stylesheet" />
    <link href="~/Scripts/Common/tautocomplete.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/Common/tautocomplete.js"></script>
    <script>
        function selectStyle(orderStyleRefId,styleName,obj) {
            $("#ta-txt").html(styleName);
            $("#orderStyleRefId").val(orderStyleRefId)
            $(".acontainer input").val(styleName);
            $(obj).DialogClose();
        
        }

        var text2 = $("#Text2").tautocomplete({
            width: "500px",
            columns: ['StyleName', 'RefNo', 'BuyerName'],
            theme: "classic",
            width: "1000px",
            highlight: 'word-highlight',
            placeholder: "Search by style/Order No.",
            ajax: {
                url: "/OmBuyOrdStyle/StyleAutocomplite",
                type: "GET",
                dataType: "json",
                data: function () {
                    return { searchString: text2.searchdata() };
                },
                success: function (data) {
                    var filterData = data;
                    return filterData;
                },
            },
            onchange: function () {
                $("#ta-txt").html(text2.text());
                $("#orderStyleRefId").val(text2.id())
            }
        });
        function loadOrderStystus(url) {
            if (url.length > 0) {
                $("body").showLoading();
                var orderStyleRefId = $("#orderStyleRefId").val();
                if (url != undefined && url != "") {
                    requseturl = url
                    jQuery.Ajax({
                        url: url,
                        data: { OrderStyleRefId:orderStyleRefId },
                        container: '#w3-container'
                    });

                } else {
                    requseturl = "";
                }
            } else {
                return false;
            }
        }
        //  loadOrderStystus("/MIS/UserActivity/Index");
    </script>

}

<!-- Sidebar -->
<div class="w3-sidebar w3-bar-block w3-yale-blue w3-collapse w3-card w3-animate  w3-text-white  " style="width:170px; cursor:pointer;" id="mySidebar">
