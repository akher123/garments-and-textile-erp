@using SCERP.Common

@model SCERP.Web.Areas.CRM.Models.ViewModels.ProjectDocumentInfoViewModel

@{
    ViewBag.Title = "Project Report";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.DocumentationReport.Count > 0) ? "" : "none";
}

<style type="text/css">
    .RefNo {
        width: 100px;
    }
</style>

@using (Html.BeginForm("Index", "ProjectDocumentInfo", FormMethod.Get, new { @class = "ProjectDocumentInfoSearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Project Report</h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>Module Name: </td>
                    <td>@Html.DropDownListFor(model => model.ModuleId, Model.ModuleSelectListItem, "-Select-")</td>

                    <td>@Html.Label("Search Field: ")</td>
                    <td>@Html.TextBoxFor(x => x.SearchKey)</td>

                    <td>@Html.Label("From Date: ")</td>
                    <td>@Html.EditorFor(x => x.FromDate)</td>
                </tr>
                <tr>
                    <td>@Html.Label("To Date: ")</td>
                    <td>@Html.EditorFor(x => x.ToDate)</td>

                    <td><input type="button" class="searchAction" /></td>
                </tr>
            </table>
        </div>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/CRM/ProjectDocumentInfo/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.DocumentationReport, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",

                columns: grid.Columns(

                    grid.Column(header: "SL", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                    grid.Column("RefNo", "Ref No", canSort: false, style: "RefNo"),
                    grid.Column("ReportName", "Report Name", canSort: false),
                    grid.Column("Description", "Description", canSort: false),
                    grid.Column("Module.ModuleName", header: "Module Name", format: @<text>@(item.Module == null ? "" : item.Module.ModuleName)</text>, canSort: false),
                    grid.Column("PhotographPath", "File Name",format: @<text>@(item.PhotographPath)</text>, canSort: false),
                    grid.Column("CRMCollaborator.CollaboratorName", header: "Responsible Person", format: @<text>@(item.CRMCollaborator == null ? "" : item.CRMCollaborator.CollaboratorName)</text>, canSort: false),
                    grid.Column("CRMCollaborator1.CollaboratorName", header: "LastUpdate By", format: @<text>@(item.CRMCollaborator1 == null ? "" : item.CRMCollaborator1.CollaboratorName)</text>, canSort: false),
            
                    grid.Column("LastUpdateDate", "LastUpdate Date", format: @<text>@(item.LastUpdateDate == null ? "" : item.LastUpdateDate.ToString("dd-MM-yyyy"))</text>, canSort: false),
            
             
                    @*grid.Column("PhotographPath", "Photograph Path123", format: @<text>@(item.LastUpdateDate < DateTime.Now ? (string)Html.ActionLink("test", "ModuleName", "test") : "Hi")</text>, canSort: false),*@
                                                                                           
                                                                                                   
                    grid.Column("Literature", format: @<text><button class="edit" action="/CRM/ProjectDocumentInfo/EditLiterature/@item.Id"></button></text>, canSort: false),
                    grid.Column("Show Picture", format: @<text><button class="edit" action="/CRM/ProjectDocumentInfo/ShowPic/@item.Id"></button></text>, canSort: false),
                    grid.Column("Detail/Edit", format: @<text><button class="edit" action="/CRM/ProjectDocumentInfo/Edit/@item.Id"></button></text>, canSort: false),
                    grid.Column("Delete",format:@<text><button class="delete" action="/CRM/ProjectDocumentInfo/Delete/@item.Id"></button></text>, canSort: false)
                    
            ));
                   
        }
    </div>
</section>
