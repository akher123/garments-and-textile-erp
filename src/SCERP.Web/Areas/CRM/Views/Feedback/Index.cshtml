@using SCERP.Common

@model SCERP.Web.Areas.CRM.Models.ViewModels.FeedbackViewModel

@{
    ViewBag.Title = "Feedback from Client";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.Feedback.Count > 0) ? "" : "none";
}

@using (Html.BeginForm("Index", "Feedback", FormMethod.Get, new { @class = "FeedbackSearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Feedback from Client</h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>@Html.Label("Search Field: ")</td>
                    <td>@Html.TextBoxFor(x => x.SearchKey)</td>

                    <td>@Html.Label("From Date: ")</td>
                    <td>@Html.TextBoxFor(x => x.FromDate,new{@class="datepicker"})</td>

                    <td>@Html.Label("To Date: ")</td>
                    <td>@Html.TextBoxFor(x => x.ToDate,new{@class="datepicker"})</td>

                    <td><input type="button" class="searchAction" /></td>
                </tr>
            </table>
        </div>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/CRM/Feedback/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Feedback, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",

                columns: grid.Columns(
                    grid.Column("Id", "Ref No", format: @<text>Feedback-@item.Id </text>, canSort: false),
                    grid.Column("Subject", "Subject", canSort: false),
                    grid.Column("Description", "Description", canSort: false),
                    grid.Column("JobStatus", header: "Status", format: @<text>@(item.JobStatus == null ? "" : Enum.GetName(typeof (FeedBackStatus), item.JobStatus))</text>, canSort: false),
                    grid.Column("CreatedByDisplayName", header: "Created By", canSort: false),
                    grid.Column("LastUpdateDate", "Created Date", format: @<text>@(item.CreatedDate == null ? "" : item.CreatedDate.ToString("dd-MM-yyyy"))</text>, canSort: false),
                    grid.Column("Detail/Edit", format: @<text><button class="edit" action="/CRM/Feedback/Edit/@item.Id"></button></text>, canSort: false),
                    grid.Column("Show pic", format: @<text><button class="edit" action="/CRM/Feedback/ShowPic/@item.Id"></button></text>, canSort: false)
                    ))
            ;
        }
    </div>
</section>
