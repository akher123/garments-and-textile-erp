@model SCERP.Model.EmployeeCategory

@{
    ViewBag.Title = Model.Id > 0 ? "Edit Employee Category" : "Create New Employee Category";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}


@using (Html.BeginForm("Save", "EmployeeCategory", FormMethod.Post, new { @class = "employeecategoryform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div>
        <table class="tabefont">
            <tr>
                <td></td>
                <td class="fieldTitleCls">Title</td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Description</td>
                <td>
                    @Html.TextAreaFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
            </tr>


        </table>
    </div>
}

