@model SCERP.Web.Areas.HRM.Models.ViewModels.EmployeeCategoryViewModel

@{
    ViewBag.Title = "Employee Category";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div style="width:500px; padding-left:340px;">
    <h2>Employee Category</h2>
</div>
<div class="additem">
  
    <div style="padding:3px;">
        <button class="AjaxPopup  btn btn-primary" action="/EmployeeCategory/Edit">Add new</button>
    </div>
    @{
        var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: true, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.EmployeeCategories, rowCount: Model.EmployeeCategories.Count, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
                         tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                            firstText: "First",
                                     lastText: "Last",
                                      nextText: "Next",
                                      mode: WebGridPagerModes.All,
                                          previousText: "Previous",
                columns: grid.Columns(
                    grid.Column("Title"),
                    grid.Column("Description"),
                    grid.Column(format:
                    @<text><button class="" action="/EmployeeCategory/Edit/@item.Id"></button></text>
                        ),
                    grid.Column(format:
                    @<text><button class="delete" action="/EmployeeCategory/Delete/@item.Id"></button></text>
                               )
               ));
    }
</div>
