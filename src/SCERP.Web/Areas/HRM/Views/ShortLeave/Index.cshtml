@using SCERP.Common
@model SCERP.Model.Custom.ShortLeaveModel

@{   
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.VEmployeeShortLeave.Count > 0) ? "" : "none";
}

@using (Html.BeginForm("Index", "ShortLeave", FormMethod.Get, new { @class = "ShortLeaveForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Gate Pass</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Employee Card Id: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.EmployeeCardId)
                    </td>

                    <td>
                        @Html.Label("From Date: ")
                    </td>
                    <td>                 
                        @Html.TextBoxFor(x => x.fromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
                    </td>

                    <td>
                        @Html.Label("To Date: ")
                    </td>
                    <td>                        
                        @Html.TextBoxFor(x => x.toDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
                    </td>

                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/ShortLeave/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.VEmployeeShortLeave, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
                grid.Columns(

                    grid.Column("EmployeeName", header: "Name", format: @<text>@(item.EmployeeName ?? "")</text>),
                    grid.Column("EmployeeCardId", header: "Card Id", format: @<text>@(item.EmployeeCardId ?? "")</text>),                       
                    grid.Column("ReasonType", header: "Reason Type", format: @<text>@(item.ReasonType == null ? "" : Enum.GetName(typeof(ReasonType), Convert.ToInt32(item.ReasonType)))</text>),
                    grid.Column("ReasonDescription", header: "Reason Description", canSort: false),
                    grid.Column("Date", header: "Date ", format: @<text>@(item.Date == null ? "" : item.Date.ToString("dd-MM-yyyy"))</text>),
                    grid.Column("FromTime", header: "From Time", canSort: false),
                    grid.Column("ToTime", header: "To Time", canSort: false),
                    grid.Column("TotalHours", header: "Total Hours", canSort: false),
                                                         
                    grid.Column("Edit", format: @<text><button class="edit" action="/HRM/ShortLeave/Edit/@item.Id"></button></text>, canSort: false) ,
                    grid.Column("Delete",format:@<text><button class="delete" action="/HRM/ShortLeave/Delete/@item.Id"></button></text>, canSort: false)       
            ));
        }
    </div>
</section>



