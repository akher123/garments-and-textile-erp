@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.SkillSetDifficultyViewModel


@{
    ViewBag.Title = "Skill Set Difficulty";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.SkillSetDifficulties.Count > 0) ? "" : "none";
}


@using (Html.BeginForm("Index", "SkillSetDifficulty", FormMethod.Get, new { @class = "SkillSetDifficultySearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div style="width:500px; padding-left:340px;">
        <h2>Skill Set Difficulty</h2>
    </div>

    <section class="search formCover" style="margin-bottom: 8px;">
        <table class="tabefont">
            <tr>
                <td>
                    @Html.Label("Difficulty Name: ")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.SearchKey)
                </td>
                <td>
                    <input type="button" class="searchAction" />
                </td>
            </tr>
        </table>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/SkillSetDifficulty/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.SkillSetDifficulties, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                            grid.Column("DifficultyName", "Difficulty Name"),
                            grid.Column("Detail/Edit", format: @<text><button class="edit" action="/HRM/SkillSetDifficulty/Edit?SkillSetDifficultyId=@item.SkillSetDifficultyId"></button></text>, canSort: false),
                            grid.Column("Delete",format:@<text><button class="delete" action="/HRM/SkillSetDifficulty/Delete?SkillSetDifficultyId=@item.SkillSetDifficultyId"></button></text>, canSort: false)));
        }
    </div>

   

</section>
