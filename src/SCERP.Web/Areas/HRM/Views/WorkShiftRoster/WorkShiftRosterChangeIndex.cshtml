@using SCERP.Common
@model SCERP.Model.HRMModel.WorkShiftRoster

@{
    ViewBag.Title = "Work Shift Roster Change";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("WorkShiftRosterChange", "WorkShiftRoster", FormMethod.Post, new { @class = "WorkShiftRosterForm ignore-validation" }))
{
    <div class="header-title">
        <h2> Work Shift Roster Change </h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td> @Html.Label("Employee CardId : ") </td>
                    <td> @Html.TextBoxFor(x => x.EmployeeCardId)  </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                </tr>
                <tr>
                    <td> @Html.Label("From Date : ") </td>
                    <td> @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "date" }) </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                </tr>
                <tr>
                    <td> @Html.Label("Shift Name :") </td>
                    <td> @Html.DropDownList("ShiftName") </td>
                    <td> </td>
                    <td> </td>
                    <td> <input type="button" class="SubmitButton addButton" value="Save" /> </td>                                           
                </tr>
            </table>
        </div>
    </section>
}

<script type="text/javascript">
    $('#ShowForm').click(function () {
        $(this).searchAction();
    });
</script>