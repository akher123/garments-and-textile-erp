@model SCERP.Web.Areas.HRM.Models.ViewModels.ShortLeaveReportViewModel
<tr>
    <td>
        @Html.Label("Company :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByCompanyId, Model.CompanySelectListItem, "--Select--", new {@class = "SearchByCompanyId", @action = "/HRM/Report/GetAllBranchesByCompanyId", @TargetClass = "SearchByBranchId"})
        @Html.Label("*", new {@class = "labelInstruction"})
    </td>

    <td>
        @Html.Label("Branch :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchId, Model.BranchSelectListItem, "--Select--", new {@class = "SearchByBranchId", @action = "/HRM/Report/GetAllBranchUnitByBranchId", @TargetClass = "SearchByBranchUnitId"})
        @Html.Label("*", new {@class = "labelInstruction"})
    </td>

    <td>
        @Html.Label("Unit :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitId, Model.UnitSelectListItem, "--Select--", new { @class = "SearchByBranchUnitId", @action = "/HRM/Report/GetAllBranchUnitDepartmentByBranchUnitId", @TargetClass = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine" })
        @Html.Label("*", new { @class = "labelInstruction" })
    </td>
</tr>
<tr>
    <td>
        @Html.Label("Department :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitDepartmentId, Model.DepartmentSelectListItem, "--Select--", new {@class = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine", @action = "/HRM/Report/GetDepartmentSectionAndLineByBranchUnitDepartmentId", @TargetClass = "Hrm_DepartmentSection", @OtherTargetClass = "Hrm_DepartmentLine"})
        @Html.Label("*", new {@class = "labelInstruction"})
    </td>

    <td>
        @Html.Label("Section :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentSectionId, Model.DepartmentSectionSelectListItem, "-Select-", new Dictionary<string, object> {{"data-val", false}, {"class", "Hrm_DepartmentSection"}})
    </td>

    <td>
        @Html.Label("Line :")
    </td>
    <td>
        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentLineId, Model.DepartmentLineSelectListItem, "-Select-", new Dictionary<string, object> {{"data-val", false}, {"class", "Hrm_DepartmentLine"}})
    </td>
</tr>

    <td>
        @Html.Label("From :")
    </td>
    <td>  
        @Html.TextBoxFor(x => x.StartDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
        @Html.Label("*", new {@class = "labelInstruction"})
    </td>

    <td>
        @Html.Label("To :")
    </td>
    <td>     
        @Html.TextBoxFor(x => x.EndDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
        @Html.Label("*", new { @class = "labelInstruction" })
    </td>

