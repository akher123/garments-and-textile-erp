@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.ReportSearchViewModel

@{
    ViewBag.Title = "Age and Fitness Certificate";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("AgeAndFitnessCertificateDate", "Report", FormMethod.Get, new { @class = "AgeAndFitnessSearchForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2> Age and Fitness Certificate </h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td align="left" colspan="2"> @Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" }) </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td> @Html.Label("Prepare Date :") </td>
                    <td> @Html.TextBoxFor(x => x.Date, new { @class = "datepicker", @placeholder = "date" }) </td>
                    <td> @Html.Label("*", new { @class = "labelInstruction" }) </td>
                    <td> @Html.Label("Employee ID:") </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchByEmployeeCardId, new { htmlAttributes = new { @class = "CardId" } })
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>
                    <td> <input type="button" class="addButton" id="ShowAgeCertificate" value="Generate Age and Fitness Certificate" /> </td>
                </tr>              
            </table>
        </div>
    </section>
}

<script type="text/javascript">
    $('#ShowAgeCertificate').click(function () {
        $(this).searchAction();
    });
</script>