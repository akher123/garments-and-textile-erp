@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.ReportSearchViewModel

@{
    ViewBag.Title = "Roster Shift Change";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("RosterShiftChange", "Report", FormMethod.Get, new { @class = "RosterShiftChangeForm" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2> Roster Shift Change </h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td> @Html.Label("From Date :") </td>
                    <td> @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "date" }) </td>
                    <td></td>
                    <td> @Html.Label("To Date :") </td>
                    <td> @Html.TextBoxFor(x => x.ToDate, new { @class = "datepicker", @data_val = "false", @placeholder = "date" }) </td>
                    <td></td>
                </tr>
                <tr>
                    <td> @Html.Label("Employee Shift From:") </td>
                    <td> @Html.TextBoxFor(x => x.EmployeeCardId, new { htmlAttributes = new { @class = "CardId" } }) </td>
                    <td> </td> 
                    <td> @Html.Label("Employee Shift To:")  </td>
                    <td> @Html.TextBoxFor(x => x.SearchByEmployeeCardId, new { htmlAttributes = new { @class = "CardId" } }) </td>                                                                         
                    <td> @*<input type="button" class="addButton" id="ShowForm" value="Transfer Shift" />*@ <input type="button" class="SubmitButton addButton" value="Save" /> </td>
                </tr>
            </table>
        </div>
    </section>
}

<script type="text/javascript">
    $('#ShowForm').click(function () {
        $(this).searchAction();
    });
</script>