@using System.Web.Mvc
@using System.Web.Mvc.Html
@model SCERP.Web.Areas.HRM.Models.ViewModels.ReportSearchViewModel

@{
    ViewBag.Title = "Salary Sheet Report";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("AllEmployeeJobCard", "Report", FormMethod.Get, new { @class = "ReportSearchForm ignore-validation" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2>Job Card (All)</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td></td>
                    <td align="left" colspan="3">@Html.Label("Fields with asterisk(*) mark are mandatory", new {@class = "labelInstruction"})</td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Company:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByCompanyId, Model.CompanySelectListItem, "--Select--", new {@class = "SearchByCompanyId", @action = "/Payroll/Report/GetAllBranchesByCompanyId", @TargetClass = "SearchByBranchId", @data_val = false})
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Branch:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchId, Model.BranchSelectListItem, "--Select--", new {@class = "SearchByBranchId", @action = "/Payroll/Report/GetAllBranchUnitByBranchId", @TargetClass = "SearchByBranchUnitId", @data_val = false})
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Unit:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitId, Model.BranchUnitSelectListItem, "--Select--", new { @class = "SearchByBranchUnitId", @action = "/Payroll/Report/GetAllBranchUnitDepartmentByBranchUnitId", @TargetClass = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine", @data_val = false })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Department:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitDepartmentId, Model.BranchUnitDepartmentSelectListItem, "--Select--", new {@class = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine", @action = "/Payroll/Report/GetDepartmentSectionAndLineByBranchUnitDepartmentId", @TargetClass = "Hrm_DepartmentSection", @OtherTargetClass = "Hrm_DepartmentLine", @data_val = false})
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Section:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentSectionId, Model.DepartmentSectionSelectListItem, "-Select-", new Dictionary<string, object> { { "data-val", false }, { "class", "Hrm_DepartmentSection" } })
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Line:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentLineId, Model.DepartmentLineSelectListItem, "-Select-", new Dictionary<string, object> { { "data-val", false }, { "class", "Hrm_DepartmentLine" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Employee Type:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByEmployeeTypeId, Model.EmployeeTypeSelectListItems, "-Select-", new {@data_val = false})
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Employee ID:")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.EmployeeCardId, new {htmlAttributes = new {@class = "CardId"}})
                    </td>
                    <td></td>

                    <td>
                        @Html.DisplayName("Year:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SelectedYear, Model.Years, "-Select-")

                    </td>
                    <td>
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayName("Month:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SelectedMonth, Model.Months, "-Select-")
                        
                    </td>
                    <td>
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>

                    <td>
                        @Html.Label("From:")
                    </td>
                    <td>            
                        @Html.TextBoxFor(x => x.SearchFieldModel.StartDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })
                    </td>
                    <td>
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>

                    <td>
                        @Html.Label("To:")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchFieldModel.EndDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To" })

                    </td>
                    <td>
                        @Html.Label("*", new { @class = "labelInstruction" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Attendance Status:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.AttendanceStatus, Model.AttendanceStatusSelectListItems, "-Select-", new Dictionary<string, object> {{"data-val", false}, {"class", "HRM_AttendanceStatus"}})
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Active Status:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.EmployeeActiveStatus, Model.EmployeeActiveStatusSelectListItems, "-Select-", new { @data_val = "false" })
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Employee Category:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.EmployeeCategory, Model.EmployeeCategorySelectListItems, "-Select-", new { @data_val = "false" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("OT Employee:")
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x.SearchByOTEligibilty, false)
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Extra OT Employee:")
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x.SearchByExtraOTEligibilty, false)
                    </td>
                    <td></td>

                    <td>
                        @Html.Label("Weekend OT Employee:")
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x.SearchByWeekendOTEligibilty, false)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Print Format:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.PrintFormatId, Model.PrintFormatStatusSelectListItems)
                    </td>
                    <td></td>

                    <td>
                        <input type="button" id="showReport" class="addButton" value="Generate Card"/>
                    </td>
                </tr>
            </table>
        </div>
    </section>

}


<script type="text/javascript">
    $('#showReport').click(function (e) {
        var $form = $(this).parents('form:first');
        if (jQuery.validator && jQuery.validator.unobtrusive) {
            $form.validate();
            if (!$form.valid()) {
                return false;
            } else {
                window.open($form.attr('action') + '?' + $form.serialize());
                e.preventDefault();
            }
        }
    }
    );
</script>

