@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.ReportSearchViewModel

@{
    ViewBag.Title = "Tiffin/Night Bill";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("TiffinBill", "Report", FormMethod.Get, new { @class = "ReportSearchForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2> Tiffin/Night Bill </h2>
    </div>

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Company:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByCompanyId, Model.CompanySelectListItem, "--Select--", new { @data_val = false, @class = "SearchByCompanyId", @action = "/HRM/EmployeeDailyAttendance/GetAllBranchesByCompanyId", @TargetClass = "SearchByBranchId" })
                    </td>

                    <td>
                        @Html.Label("Branch:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchId, Model.BranchSelectListItem, "--Select--", new { @data_val = false, @class = "SearchByBranchId", @action = "/HRM/EmployeeDailyAttendance/GetAllBranchUnitByBranchId", @TargetClass = "Hrm_BranchUnitIdForDepartmentAndWorkShift" })
                    </td>

                    <td>
                        @Html.Label("Unit:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitId, Model.BranchUnitSelectListItem, "--Select--", new { @data_val = false, @class = "Hrm_BranchUnitIdForDepartmentAndWorkShift", @action = "/HRM/EmployeeDailyAttendance/GetAllBranchUnitDepartmentAndWorkShiftByBranchUnitId", @TargetClass = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine", @OtherTargetClass = "Hrm_BranchUnitWorkShift" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Department:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByBranchUnitDepartmentId, Model.BranchUnitDepartmentSelectListItem, "--Select--", new { @data_val = false, @class = "Hrm_BranchUnitDepartmentForDepartmentSectionAndLine", @action = "/HRM/EmployeeDailyAttendance/GetDepartmentSectionAndLineByBranchUnitDepartmentId", @TargetClass = "Hrm_DepartmentSection", @OtherTargetClass = "Hrm_DepartmentLine" })
                    </td>

                    <td>
                        @Html.Label("Section:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentSectionId, Model.DepartmentSectionSelectListItem, "-Select-", new { @data_val = false, @class = "Hrm_DepartmentSection" })
                    </td>

                    <td>
                        @Html.Label("Line:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByDepartmentLineId, Model.DepartmentLineSelectListItem, "-Select-", new { @data_val = false, @class = "Hrm_DepartmentLine" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Date:")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "Date" })
                    </td>

                    <td>
                        @Html.Label("Print Format:")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.PrintFormatId, Model.PrintFormatStatusSelectListItems)
                    </td>

                    <td>
        
                    </td>
                    <td>
                        <input type="button" id="showReport" class="addButton" style="float: right" value="Show Report" />
                    </td>
                </tr>   
                <tr>
                    <td>
                       
                    </td>
                    <td>
                        <table class="tabefont">
                            <tr>
                                <td>@Html.CheckBox("All", false)</td>
                                <td>@Html.Label("All")</td>
                            </tr>
                            <tr>
                                <td>@Html.CheckBox("Management", false)</td>
                                <td>@Html.Label("Management")</td>
                            </tr>
                            <tr>
                                <td>@Html.CheckBox("MiddleManagement", false)</td>
                                <td>@Html.Label("Middle Management")</td>
                            </tr>
                            <tr>
                                <td>@Html.CheckBox("TeamMemberA", false)</td>
                                <td>@Html.Label("Team Member A")</td>
                            </tr>
                            <tr>
                                <td>@Html.CheckBox("TeamMemberB", false)</td>
                                <td>@Html.Label("Team Member B")</td>
                            </tr>
                        </table>
                    </td>

                    <td>
         
                    </td>
                    <td>
                
                    </td>

                    <td></td>
                    <td>
             
                    </td>
                </tr>             
            </table>
        
        </div>
    </section>
}

<script type="text/javascript">

    $('#showReport').click(function (e) {
        var $form = $(this).parents('form:first');
        if (jQuery.validator && jQuery.validator.unobtrusive) {
            $form.validate();
            if (!$form.valid()) {
                return false;
            } else {
                window.open($form.attr('action') + '?' + $form.serialize());
                e.preventDefault();
            }
        }
    }
    );

</script>