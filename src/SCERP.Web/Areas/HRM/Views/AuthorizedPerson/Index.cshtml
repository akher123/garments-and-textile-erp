@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.AuthorizedPersonViewModel

@{
    ViewBag.Title = "Authorized Person";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.AuthorizedPersons.Count > 0) ? "" : "none";
}

@using (Html.BeginForm("Index", "AuthorizedPerson", FormMethod.Get, new { @class = "AuthorizedPersonSearchForm ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Authorized Person</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Authorization Type: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchByAuthorizationTypeId, Model.AuthorizationTypeSelectListItem, "--Select--")
                    </td>

                    <td>
                        @Html.Label("Authorized Person: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchByAuthorizedPerson)
                    </td>

                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/AuthorizedPerson/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.AuthorizedPersons, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(

                        grid.Column("AuthorizationType.TypeName", header: "Authorization Type", format: @<text>@(item.AuthorizationType == null ? "" : item.AuthorizationType.TypeName)</text>),
                        grid.Column("Employee.Name", header: "Name", format: @<text>@(item.Employee == null ? "" : item.Employee.Name)</text>),  
                        grid.Column("Employee.EmployeeCardId", canSort: false, header: "Employee ID", format: @<text>@(item.Employee == null ? "" : item.Employee.EmployeeCardId)</text>),                  
                        grid.Column("Edit", format: @<text><button class="edit" action="/HRM/AuthorizedPerson/Edit/@item.Id"></button></text>, canSort: false),
                        grid.Column("Delete", format: @<text><button class="delete" action="/HRM/AuthorizedPerson/Delete/@item.Id"></button></text>, canSort: false)));
        }
    </div>
  <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "AuthorizedPerson", new { SearchByAuthorizationTypeId = Model.SearchByAuthorizationTypeId })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "AuthorizedPerson", new { SearchByAuthorizedPerson = Model.SearchByAuthorizedPerson })" title="print" src="~/Content/images/print-icon.png" />
    </div>
</section>

