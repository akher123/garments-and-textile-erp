@using SCERP.Model
@*@model SCERP.Model.Branch*@

@model SCERP.Model.Custom.BranchViewModel
@{
    ViewBag.Title = Model.Id > 0 ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}


@using (Html.BeginForm("Save", "Branch", FormMethod.Post, new { @class = "branchform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <fieldset>
        <legend>Branch</legend>
        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
            </tr>
            
            <tr>
                <td>&nbsp;</td>
                <td class="fieldTitleCls">Company:</td>
                <td>
                    @Html.DropDownListFor(model => model.CompanyId, Model.CompanySelectListItem, "--Select--", new { @class = "form_dromdown" })
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.CompanyId)
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Branch Name:</td>
                <td>
                    @Html.TextBoxFor(model => model.Name)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Name)
                </td>
            </tr>
            
            <tr>
                <td></td>
                <td class="fieldTitleCls">Branch Name (In Bengali):</td>
                <td>
                    @Html.TextBoxFor(model => model.NameInBengali)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.NameInBengali)
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Full Address:</td>
                <td>
                    @Html.TextAreaFor(model => model.FullAddress)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.FullAddress)
                </td>
            </tr>
            
            <tr>
                <td></td>
                <td class="fieldTitleCls">Full Address (In Bengali):</td>
                <td>
                    @Html.TextAreaFor(model => model.FullAddressInBengali)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.FullAddressInBengali)
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">District:</td>
                <td>
                    @Html.DropDownListFor(m => m.DistrictId, Model.DistrictSelectListItem, "--Select--", new { @class = "Common_DistrictId", @action = "/HRM/Branch/GetAllPoliceStationsByDistrictId", @TargetClass = "Common_PoliceStationId" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Police Station:</td>
                <td>
                    @Html.DropDownListFor(model => model.PoliceStationId, Model.PoliceStationSelectListItem, "--Select--", new { @class = "Common_PoliceStationId" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Office:</td>
                <td>
                    @Html.TextBoxFor(model => model.PostOffice)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostOffice)
                </td>
            </tr>
            
            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Office (In Bengali):</td>
                <td>
                    @Html.TextBoxFor(model => model.PostOfficeInBengali)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostOfficeInBengali)
                </td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Code:</td>
                <td>
                    @Html.TextBoxFor(model => model.PostCode)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostCode)
                </td>
            </tr>
          
            <tr>
                <td></td>
                <td class="fieldTitleCls">Phone:</td>
                <td>
                    @Html.TextBoxFor(model => model.Phone)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Phone)
                </td>
            </tr>
           
            <tr>
                <td></td>
                <td class="fieldTitleCls">Fax:</td>
                <td>
                    @Html.TextBoxFor(model => model.Fax)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Fax)
                </td>
            </tr>
           
            <tr>
                <td></td>
                <td class="fieldTitleCls">Email:</td>
                <td>
                    @Html.TextBoxFor(model => model.Email)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Email)
                </td>
            </tr>

         
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}



