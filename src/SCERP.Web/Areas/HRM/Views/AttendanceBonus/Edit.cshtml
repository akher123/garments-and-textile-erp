@model SCERP.Web.Areas.HRM.Models.ViewModels.AttendanceBonusViewModel

@{
    ViewBag.Title = (Model.AttendanceBonusId > 0) ? "Edit" : "Add";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}

@using (Html.BeginForm("Save", "AttendanceBonus", FormMethod.Post, new {@class = "AttendanceBonusform"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IsActive)
    @Html.HiddenFor(model => model.CreatedDate)
    @Html.HiddenFor(model => model.EditedDate)
    @Html.HiddenFor(model => model.AttendanceBonusId)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.EditedBy)
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Attendance Bonus</legend>
        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new {@class = "labelInstruction"})</td>
            </tr>           
            <tr>
                <td>
                    @Html.Label("Employee Type :")
                </td>
                <td>
                    @Html.DropDownListFor(x => x.SearchFieldModel.SearchByEmployeeTypeId, Model.EmployeeTypeSelectListItems, "--Select--", new { @class = "Hrm_EmployeeTypeIdForDesignation", @action = "/HRM/AttendanceBonus/GetEmployeeDesignationByEmployeeTypeId", @TargetClass = "Hrm_EmployeeDesignationId" })                    
                    @Html.Label("*", new {@class = "labelInstruction"})                    
                </td>
            </tr>            
            <tr>
                <td>
                    @Html.Label("Employee Designation :")
                </td>
                <td>
                    @Html.DropDownListFor(x => x.SearchFieldModel.SearchByEmployeeDesignationId, Model.EmployeeDesignationSelectListItem, "--Select--", new { @class = "Hrm_EmployeeDesignationId" })
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
            </tr>

            <tr>
                <td>@Html.Label("Amount :") </td>   
                <td> @Html.TextBoxFor(x => x.Amount) 
                    @Html.Label("*", new {@class = "labelInstruction"})
                    @Html.ValidationMessageFor(x => x.Amount)
                </td>                                                                           
            </tr>
            
            <tr>
                <td>@Html.Label("From Date :") </td>
                <td>
                    @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @placeholder = "From Date" })
                    @Html.Label("*", new {@class = "labelInstruction", @data_val=true})
                    @Html.ValidationMessageFor(x => x.FromDate)
                </td>
            </tr>
            
            <tr>
                <td>@Html.Label("To Date :") </td>
                <td> 
                    @Html.TextBoxFor(x => x.ToDate, new { @class = "datepicker", @data_val = "false", @placeholder = "To Date" })      
                    @Html.ValidationMessageFor(x => x.ToDate)
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}

