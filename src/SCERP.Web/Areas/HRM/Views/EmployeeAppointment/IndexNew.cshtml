@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.ReportSearchViewModel

@{
    ViewBag.Title = "Appointment Letter New";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("SearchNew", "EmployeeAppointment", FormMethod.Get, new { @class = "EmployeeAppointmentSearchForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2>Appointment Letter New</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td align="left" colspan="2">@Html.Label("Fields with asterisk(*) mark are mandatory", new {@class = "labelInstruction"})</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Prepare Date :")
                    </td>
                    <td>                    
                        @Html.TextBoxFor(x => x.Date, new { @class = "datepicker", @data_val = "false", @placeholder = "date" })
                    </td>
                    <td> @Html.Label("*", new {@class = "labelInstruction"}) </td>

                    <td>
                        @Html.Label("Employee ID:")                                               
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchByEmployeeCardId, new { htmlAttributes = new { @class = "CardId" } })
                        @Html.Label("*", new { @class = "labelInstruction" })                        
                    </td>
                
                </tr>
                <tr>
                    <td>
                        @Html.Label("Employee Type")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchFieldModel.SearchByEmployeeTypeId, Model.EmployeeTypeSelectListItems, new { @data_val = false, @class = "Hrm_EmployeeTypeId", @action = "/HRM/Report/GetAllEmployeeGradesByEmployeeTypeId", @TargetClass = "Hrm_EmployeeGradeId" })
                    </td>
                    <td> @Html.Label("*", new { @class = "labelInstruction" }) </td>
                    <td></td>
                    <td>
                        <input type="button" class="addButton" id="ShowLetter" value="Generate Appointment Letter" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<script type="text/javascript">

    $('#ShowLetter').click(function () {

        $(this).searchAction();

    });

</script>

