@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.PoliceStationViewModel

@{
    ViewBag.Title = "Police Station";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.PoliceStations.Count > 0) ? "" : "none";
}
<div class="header-title">
    <h2>Police Stations</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("Index", "PoliceStations", FormMethod.Get, new { @class = "PoliceStationsSearchForm  ignore-validation" }))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Country: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchByCountry, null, "--Select--", new { @class = "Common_CountryId", @action = "/HRM/PoliceStations/GetDistrictByCountry", @TargetClass = "Common_DistrictId" })
                    </td>
                    <td>
                        &nbsp;
                    </td>
               
                    <td>
                        @Html.Label("District: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchByDistrict, null, "--Select--", new { @class = "Common_DistrictId" })
                    </td>
                    <td>
                        &nbsp;
                    </td>
               
                    <td>
                        @Html.Label("Police Station: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchByPoliceStation)
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>

            </table>

        }
    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/PoliceStations/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.PoliceStations, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
                grid.Columns(
                    grid.Column("Name", header: "Police Station"),
                    grid.Column("District.Name", header: "District", format: @<text>@(item.District == null ? "" : item.District.Name)</text>),
                    grid.Column("Country.Name", header: "Country", format: @<text>@(item.Country == null ? "" : item.Country.CountryName)</text>),
                    grid.Column("Detail/Edit", format: @<text><button class="edit" action="/HRM/PoliceStations/Edit/@item.Id"></button></text>, canSort: false),
                    grid.Column("Delete", format: @<text><button class="delete" action="/HRM/PoliceStations/Delete/@item.Id"></button></text>, canSort: false)));
        }
    </div>

    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "PoliceStations", new { SearchByPoliceStation = Model.SearchByPoliceStation, SearchByDistrict = Model.SearchByDistrict })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        @*<a style="display:@displayStyle;" href="@Url.Action("GetPdf", "PoliceStations", new { SearchByPoliceStation = Model.SearchByPoliceStation, SearchByDistrict = Model.SearchByDistrict })"><img src="~/Content/images/Pdf-icon.png" width="30" height="30" title="Export to PDF" /></a>*@
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "PoliceStations", new { SearchByPoliceStation = Model.SearchByPoliceStation, SearchByDistrict = Model.SearchByDistrict })" title="Print" src="~/Content/images/print-icon.png" />
    </div>

</section>
