@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.ExceptionDayViewModel
@{
    ViewBag.Title = "Exception Day List";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Index", "ExceptionDay", FormMethod.Get, new { @class = "ExceptionDayForm ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Exception Day</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/ExceptionDay/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.ExceptionDays, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                  grid.Columns(
                  //grid.Column("BranchUnit.Branch.Company.Name", header: "Company"),
                  //grid.Column("BranchUnit.Branch.Name", header: "Branch"),
                  grid.Column("BranchUnit.Unit.Name", header: "Unit"),
                  grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.ExceptionDate ?? ""), header: "Exception Date"),
                  grid.Column(format: (item) => item.IsExceptionForWeekend == false ? "No" : "Yes", header: "Is Exception For Weekend"),
                  grid.Column(format: (item) => item.IsExceptionForHoliday == false ? "No" : "Yes", header: "Is Exception For Holiday"),
                  grid.Column(format: (item) => item.IsExceptionForGeneralDay == false ? "No" : "Yes", header: "Is Exception For General Day"),
                  grid.Column(format: (item) => item.IsDeclaredAsWeekend == false ? "No" : "Yes", header: "Is Declared As Weekend"),
                  grid.Column(format: (item) => item.IsDeclaredAsHoliday == false ? "No" : "Yes", header: "Is Declared As Holiday"),
                  grid.Column(format: (item) => item.IsDeclaredAsGeneralDay == false ? "No" : "Yes", header: "Is Declared As General Day"),
                  grid.Column("Detail/ Edit", canSort: false, format: @<text><button class="edit" action="/HRM/ExceptionDay/Edit?ExceptionDayId=@item.ExceptionDayId"></button></text>),
                  grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/HRM/ExceptionDay/Delete?ExceptionDayId=@item.ExceptionDayId"></button></text>)));
        }
    </div>
</section>

