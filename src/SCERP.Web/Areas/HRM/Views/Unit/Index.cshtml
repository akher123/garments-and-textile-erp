@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.UnitViewModel
@{
    ViewBag.Title = "Unit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.Units.Count > 0) ? "" : "none";
}
<div class="header-title">
    <h2>Unit Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "Unit", FormMethod.Get, new { @class = "UnitSearchForm submit-allow " }))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">

                <tr>
                    <td>
                        @Html.Label("Unit Name :")
                    </td>

                    <td>
                        @Html.EditorFor(x => x.SearchByName)
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>

            </table>


        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/Unit/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Units, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("Name", header: "Unit"),
                        grid.Column("Description", header: "Description", canSort: false),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/Unit/Edit?UnitId=@item.UnitId"></button></text>),
                        grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/HRM/Unit/Delete?UnitId=@item.UnitId"></button></text>)));
        }
    </div>
    <div class="exportReport">

        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "Unit", new { SearchByName = Model.SearchByName })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "Unit", new { SearchByName = Model.SearchByName })" title="print" src="~/Content/images/print-icon.png" />
    </div>

</section>


