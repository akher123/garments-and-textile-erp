@model SCERP.Web.Areas.HRM.Models.ViewModels.UnitDepartmentViewModel
@{
    Layout = null;
    var rowCount = 1;
}
<div>
    <link href="~/Content/Common/PdfReport.css" rel="stylesheet" />
    <table class="pdfReportTable" style="border: 0;margin-bottom:5px">
        <thead class="reportHeader">
            <tr class="reportTitle">
                <td colspan="15" align="center">Unit Departmet</td>
            </tr>
            <tr>
                <td style="padding-left: 10px;">Date:@DateTime.Now.Date.ToString("dd-MM-yyyy")</td>
            </tr>
        </thead>
    </table>

    <div>
        <table class="pdfReportTable" border="1">
            <thead class="reportThead">
                <tr class="reportTR">
                    <td class="reportTH">
                        SL. No
                    </td>

                    <td class="reportTH">
                        Unit Name
                    </td>

                    <td class="reportTH">
                        Department Name
                    </td>

                </tr>
            </thead>
            <tbody class="reportBody">

                @foreach (var unitDepartment in Model.UnitDepartments)
                {
                    <tr class="reportTR">
                        <td class="reportTD">
                            @rowCount
                        </td>
                        <td class="reportTD">
                            @(@unitDepartment.Unit == null ? "" : @unitDepartment.Unit.Name)
                        </td>
                        <td class="reportTD">
                            @(@unitDepartment.Department == null ? "" : @unitDepartment.Department.Name)
                        </td>
                    </tr>
                    rowCount += 1;
                }

            </tbody>

        </table>
    </div>
</div>



