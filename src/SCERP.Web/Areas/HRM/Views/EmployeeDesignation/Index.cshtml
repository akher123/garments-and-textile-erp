 @using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.EmployeeDesignationViewModel

@{
    ViewBag.Title = "Employee Designation";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.EmployeeDesignations.Count > 0) ? "" : "none";
}

@using (Html.BeginForm("Index", "EmployeeDesignation", FormMethod.Get, new { @class = "EmployeeDesignationSearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Employee Designation</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Employee Type: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchByEmployeeTypeId, null, "-Select-", new {@class = "HrmEmployeeTypeId"})
                    </td>

                    <td>
                        @Html.Label("Employee Grade: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.SearchByEmployeeGradeId, null, "-Select-", new {@class = "Hrm_GradeId"})
                    </td>

                    <td>
                        @Html.Label("Employee Designation: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchByEmployeeDesignationTitle)
                    </td>

                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/EmployeeDesignation/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.EmployeeDesignations, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("Title"),
                        grid.Column("EmployeeType.Title", header: "Employee Type", format: @<text>@(item.EmployeeType == null ? "" : item.EmployeeType.Title)</text>),
                        grid.Column("EmployeeGrade.Name", header: "Grade", format: @<text>@(item.EmployeeGrade == null ? "" : item.EmployeeGrade.Name)</text>),
                        grid.Column("Detail/Edit", format: @<text><button class="edit" action="/HRM/EmployeeDesignation/Edit/@item.Id"></button></text>, canSort: false),
                        grid.Column("Delete", format: @<text><button class="delete" action="/HRM/EmployeeDesignation/Delete/@item.Id"></button></text>, canSort: false)));
        }
    </div>

    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "EmployeeDesignation", new { SearchByEmployeeTypeId = Model.SearchByEmployeeTypeId, SearchByEmployeeGradeId = Model.SearchByEmployeeGradeId, SearchByEmployeeDesignationTitle = Model.SearchByEmployeeDesignationTitle })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "EmployeeDesignation", new { SearchByEmployeeTypeId = Model.SearchByEmployeeTypeId, SearchByEmployeeGradeId = Model.SearchByEmployeeGradeId, SearchByEmployeeDesignationTitle = Model.SearchByEmployeeDesignationTitle })" title="Print" src="~/Content/images/print-icon.png" />
    </div>

</section>


@section scripts
{
    <script src="~/Scripts/SCERP/employeeDesignation.js"></script>
}