@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.BankAccountTypeViewModel
@{
    ViewBag.Title = "BankAccountType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.BankAccountTypes.Any()) ? "" : "none";
}
@using (Html.BeginForm("Index", "BankAccountType", FormMethod.Get, new { @class = "BankAccountTypeSearchForm ignore-validation" }))
{
    @Html.HiddenFor(x=>x.IsSearch)
    <div style="width:500px; padding-left:340px;">
        <h2>Bank Account Type</h2>
    </div>
    <section class="search formCover" style="margin-bottom: 3px;">
      
            <table class="tabefont">
                <tr>
                    <td >
                        @Html.Label("Account Type :")
                    </td>
                    <td>
                        @Html.EditorFor(x => x.SearchKeyAccountType)
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
      
    </section>
}
<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/BankAccountType/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.BankAccountTypes, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                grid.Columns(
                grid.Column("AccountType", header: "Account Type"),
                grid.Column("Description", header: "Description",canSort: false),
                grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/BankAccountType/Edit?BankAccountTypeId=@item.BankAccountTypeId"></button></text>),
                grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/HRM/BankAccountType/Delete?BankAccountTypeId=@item.BankAccountTypeId"></button></text>)));
        }
    </div>
</section>


