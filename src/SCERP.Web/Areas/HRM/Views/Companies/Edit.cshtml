@model SCERP.Model.Company

@{
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}

@using (Html.BeginForm("Save", "Companies", FormMethod.Post, new { @class = "companyform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ImagePath, new { @class = "documentPathHidden" })
    <table>
        <tr>
            <td>
                <fieldset>
                    <legend> Upload Company Logo(.jpeg,.png) </legend>
                    <div id="uploadFile" action="/Common/Document/DocumentFileUpload?RefId=@Model.CompanyRefId">Upload</div>
                </fieldset>
            </td>
        </tr>
    </table>
    <fieldset>
        <legend>Company</legend>
        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Company Code:</td>
                <td>
                    @Html.TextBoxFor(model => model.CompanyRefId, new { @style = "backgrount:grey", @readonly = "readonly" })
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Company Name:</td>
                <td>
                    @Html.TextBoxFor(model => model.Name)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Name)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Domain:</td>
                <td>
                    @Html.TextBoxFor(model => model.DomainName)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.DomainName)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Company Name (In Bengali):</td>
                <td>
                    @Html.TextBoxFor(model => model.NameInBengali)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.NameInBengali)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Full Address:</td>
                <td>
                    @Html.TextAreaFor(model => model.FullAddress)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.FullAddress)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Full Address (In Bengali):</td>
                <td>
                    @Html.TextAreaFor(model => model.FullAddressInBengali)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.FullAddressInBengali)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">District:</td>
                <td>
                    @Html.DropDownListFor(model => model.DistrictId, ViewBag.DistrictItemList as SelectList, "-Select-", new { @onchange = "getPoliceStationByDistrict(this.value)" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Police Station:</td>
                <td>
                    @Html.DropDownListFor(model => model.PoliceStationId, ViewBag.PoliceStationItemList as SelectList, "-Select-", new { id = "policeStation" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Office:</td>
                <td>
                    @Html.TextBoxFor(model => model.PostOffice)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostOffice)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Office (In Bengali):</td>
                <td>
                    @Html.TextBoxFor(model => model.PostOfficeInBengali)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostOfficeInBengali)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Post Code:</td>
                <td>
                    @Html.TextBoxFor(model => model.PostCode)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.PostCode)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Phone:</td>
                <td>
                    @Html.TextBoxFor(model => model.Phone)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Phone)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Fax:</td>
                <td>
                    @Html.TextBoxFor(model => model.Fax)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Fax)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Email:</td>
                <td>
                    @Html.TextBoxFor(model => model.Email)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Email)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Website:</td>
                <td>
                    @Html.TextBoxFor(model => model.Website)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Website)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">Tax Identification No:</td>
                <td>
                    @Html.TextBoxFor(model => model.TinNo)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.TinNo)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">VAT Registration No:</td>
                <td>
                    @Html.TextBoxFor(model => model.VatRegNo)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.VatRegNo)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">Contact Person Name:</td>
                <td>
                    @Html.TextBoxFor(model => model.ContactPerson)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ContactPerson, null)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">Contact Person Designation:</td>
                <td>
                    @Html.TextBoxFor(model => model.ContactPersonDesignation)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ContactPersonDesignation)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">Contact Person Phone:</td>
                <td>
                    @Html.TextBoxFor(model => model.ContactPersonMobile)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ContactPersonMobile)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls" style="width: 190px;">Contact Person Email:</td>
                <td>
                    @Html.TextBoxFor(model => model.ContactPersonEmail)
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ContactPersonEmail)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
                <td></td>
            </tr>

        </table>
    </fieldset>

}


@section scripts
{
    <script src="~/Scripts/Common/documnet.js"></script>

    <script src="~/Scripts/AppScripts/district.js"></script>
}

