@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.HouseKeepingItemViewModel
@{
    ViewBag.Title = "House Keeping Item";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using (Html.BeginForm("Index", "HouseKeepingItem", FormMethod.Get, new { @class = "HouseKeepingItemForm" }))
{
    @Html.HiddenFor(x => x.IsSearch)
    <div class="header-title">
        <h2>House Keeping Goods</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>
}
<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/HouseKeepingItem/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.HouseKeepingItems, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("HkItemRefId", header: "Ref No"),
            grid.Column("Name", header: "Name"),
            grid.Column("Description", header: "Description"),
        
            grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/HouseKeepingItem/Edit?HouseKeepingItem.HouseKeepingItemId=@item.HouseKeepingItemId"></button></text>),
            grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/HRM/HouseKeepingItem/Delete?HouseKeepingItemId=@item.HouseKeepingItemId"></button></text>)));
        }
    </div>
</section>
