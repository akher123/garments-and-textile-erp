@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.GenderViewModel
@{
    ViewBag.Title = "Gender";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Index", "Gender", FormMethod.Get, new { @class = "GenderSearchForm ignore-validation" }))
{
    @Html.HiddenFor(x=>x.IsSearch)

    <div class="header-title">
        <h2>Gender</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Gender:")
                    </td>
                    <td>
                        @Html.EditorFor(x => x.SearchByTitle)
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/Gender/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Genders, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("Title", header: "Gender"),
                        grid.Column("TitleInBengali", header: "GenderInBengali"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/Gender/Edit?GenderId=@item.GenderId"></button></text>),
                        grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/HRM/Gender/Delete?GenderId=@item.GenderId"></button></text>)));
        }
    </div>
</section>


