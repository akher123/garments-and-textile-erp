@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.SkillSetCategoryViewModel
           

@{
    ViewBag.Title = "Skill Set Category";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.SkillSetCategories.Count > 0) ? "" : "none";
}


@using (Html.BeginForm("Index", "SkillSetCategory", FormMethod.Get, new { @class = "SkillSetCategorySearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div style="width:500px; padding-left:340px;">
        <h2>Skill Set Category</h2>
    </div>

    <section class="search formCover" style="margin-bottom: 8px;">
        <table class="tabefont">
            <tr>
                <td>
                    @Html.Label("Category Name: ")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.SearchKey)
                </td>
                <td>
                    <input type="button" class="searchAction" />
                </td>
            </tr>
        </table>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/SkillSetCategory/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.SkillSetCategories, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                            grid.Column("CategoryName", "Category Name"),                    
                            grid.Column("Detail/Edit", format: @<text><button class="edit" action="/HRM/SkillSetCategory/Edit?CategoryId=@item.CategoryId"></button></text>, canSort: false),
                            grid.Column("Delete",format:@<text><button class="delete" action="/HRM/SkillSetCategory/Delete?CategoryId=@item.CategoryId"></button></text>, canSort: false)));
        }
    </div>

    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "SkillSetCategory", new { SearchKey = Model.SearchKey })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "SkillSetCategory", new { SearchKey = Model.SearchKey })" alt="Print" title="Print" src="~/Content/images/print-icon.png" />
    </div>

</section>



