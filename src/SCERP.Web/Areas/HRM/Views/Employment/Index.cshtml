@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.EmploymentViewModel

@{
    Layout = null;
}

<div class="EmploymentDetailContainner">
    @using (Html.BeginForm("Index", "Employment", FormMethod.Get, new { @class = "EmploymentSearchForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset style="margin-top: 10px; margin-right: 10px; margin-bottom: 20px;">
            <legend>Employment Information</legend>

            <div class="additem">
                <div style="margin-bottom: 3px;">
                    <button class="AjaxPopup addButton" action="/HRM/Employment/Edit">Add New</button>
                </div>
                @{
        var grid = new WebGrid(canPage: false, rowsPerPage: AppConfig.PageSize, canSort: false, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.Employments, autoSortAndPage: false);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
                        tableStyle: "webgrid-table webgrid",
                        headerStyle: "webgrid-header",
                        footerStyle: "webgrid-footer",
                        alternatingRowStyle: "webgrid-alternating-row",
                        selectedRowStyle: "webgrid-selected-row",
                        rowStyle: "webgrid-row-style",
                        firstText: "First",
                        lastText: "Last",
                        nextText: "Next",
                        mode: WebGridPagerModes.All,
                        previousText: "Previous",
                        columns: grid.Columns(
                           grid.Column("CompanyName", header: "Company Name", format: @<text>@(item == null ? "" : item.CompanyName)</text>),
                           grid.Column("Department",format: @<text>@(item == null ? "" : item.Department)</text>),
                           grid.Column("Designation", format: @<text>@(item == null ? "" : item.Designation)</text>),
                           grid.Column("FromDate", header: "From ", format: @<text>@(item.FromDate == null ? "---" : (String.Format("{0:dd/MM/yyyy}", item.FromDate)))</text>),
                           grid.Column("ToDate", header: "To ", format: @<text>@(item.ToDate == null ? "---" : (String.Format("{0:dd/MM/yyyy}", item.ToDate)))</text>),
                           grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/Employment/Edit/@item.Id"></button></text>),
                           grid.Column("Delete", format:@<text><button class="delete" action="/HRM/Employment/Delete/@item.Id"></button></text>, canSort: false)))
                }
            </div>
        </fieldset>
    }
</div>