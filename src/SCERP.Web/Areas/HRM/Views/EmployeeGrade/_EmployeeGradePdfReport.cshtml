@model SCERP.Web.Areas.HRM.Models.ViewModels.EmployeeGradeViewModel

@{
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
    int rowCount = 1;
}

<div class="additem ">
    <div>
        <link href="~/Content/Common/PdfReport.css" rel="stylesheet" />
        <table class="pdfReportTable" style="border: 0;margin-bottom:5px">
            <thead class="reportHeader">
                <tr class="reportTitle">
                    <td colspan="15" align="center">Employee Grade List</td>
                </tr>
                <tr>
                    <td>Date:@DateTime.Now.Date.ToString("dd-MM-yyyy")</td>
                </tr>
            </thead>
        </table>

        <table class="pdfReportTable" border="1">
            <thead class="reportThead">
                <tr class="reportTR">
                    <td class="reportTH">
                        SL. No
                    </td>
                    <td class="reportTH">
                        Employee Grade
                    </td>
                    <td class="reportTH">
                       Employee Type
                    </td>
                </tr>
            </thead>
            <tbody class="reportBody">

                @foreach (var employeeGrade in Model.EmployeeGrades)
                {
                    <tr class="reportTR">

                        <td class="reportTD">
                            @rowCount
                        </td>

                        <td class="reportTD">
                            @employeeGrade.Name
                        </td>

                        <td class="reportTD">
                            @employeeGrade.EmployeeType.Title
                        </td>
                    </tr>

                    rowCount += 1;
                }
            </tbody>
        </table>


    </div>

</div>





