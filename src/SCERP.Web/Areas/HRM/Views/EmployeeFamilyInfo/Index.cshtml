@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.EmployeeFamilyInfoViewModel

@{
    Layout = null;
}
<div class="EmployeeFamilyInfoDetailContainner">

    @using (Html.BeginForm("Index", "EmployeeFamilyInfo", FormMethod.Get, new { @class = "EmployeeFamilyInfoSearchForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset style="margin-top: 10px; margin-right: 10px; margin-bottom: 20px;">
            <legend>Family Information</legend>

            <div class="additem">
                <div style="margin-bottom: 3px;">
                    <button class="AjaxPopup addButton" action="/HRM/EmployeeFamilyInfo/Edit">Add New</button>
                </div>
                @{
        var grid = new WebGrid(canPage: false, rowsPerPage: AppConfig.PageSize, canSort: false, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.EmployeeFamilyInfos, autoSortAndPage: false);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
                        tableStyle: "webgrid-table webgrid",
                        headerStyle: "webgrid-header",
                        footerStyle: "webgrid-footer",
                        alternatingRowStyle: "webgrid-alternating-row",
                        selectedRowStyle: "webgrid-selected-row",
                        rowStyle: "webgrid-row-style",
                        firstText: "First",
                        lastText: "Last",
                        nextText: "Next",
                        mode: WebGridPagerModes.All,
                        previousText: "Previous",
                        columns: grid.Columns(
                            grid.Column("NameOfChild", header: "Name of Child ", format: @<text>@(item.NameOfChild ?? "")</text>),
                            grid.Column("DateOfBirth", header: "Date of Birth ", format: @<text>@(item.DateOfBirth == null ? "---" : (String.Format("{0:dd/MM/yyyy}", item.DateOfBirth)))</text>),
                            grid.Column("Gender.Title", header: "Gender ", format: @<text>@(item.Gender == null ? "" : item.Gender.Title)</text>),
                            grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/EmployeeFamilyInfo/Edit?EmployeeFamilyInfoId=@item.EmployeeFamilyInfoId"></button></text>),
                            grid.Column("Delete", format:@<text><button class="delete" action="/HRM/EmployeeFamilyInfo/Delete?EmployeeFamilyInfoId=@item.EmployeeFamilyInfoId"></button></text>, canSort: false)))
                }
            </div>
        </fieldset>
    }


</div>