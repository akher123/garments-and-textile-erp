@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.SalarySetupViewModel
@{
    Layout = null;
    int rowCount = 1;
}
<div class="additem ">
    <div>
        <link href="~/Content/Common/PdfReport.css" rel="stylesheet" />
        <table class="pdfReportTable" style="border: 0;margin-bottom:5px">
            <thead class="reportHeader">
                <tr class="reportTitle">
                    <td colspan="15" align="center">Salary  Setup</td>
                </tr>
                <tr>
                    <td>Date:@DateTime.Now.Date.ToString("dd-MM-yyyy")</td>
                </tr>
            </thead>
        </table>

        <table class="pdfReportTable" border="1">
            <thead class="reportThead">
                <tr class="reportTR">
                    <td class="reportTH">
                        SI.No
                    </td>
                    <td class="reportTH">
                        Employee Type
                    </td>
                    <td class="reportTH">
                        Employee Grade
                    </td>
                    <td class="reportTH">
                        Gross Salary
                    </td>
                    <td class="reportTH">
                        Basic Salary
                    </td>
                    <td class="reportTH">
                        House Rent
                    </td>
                    <td class="reportTH">
                        Medical Allowance
                    </td>
                    <td class="reportTH">
                        Conveyance
                    </td>
                    <td class="reportTH">
                        Food Allowance
                    </td>
                    <td class="reportTH">
                        Entertainment Allowance
                    </td>
                    <td class="reportTH">
                        From Date
                    </td>
                    <td class="reportTH">
                        To Date
                    </td>
                    <td class="reportTH">
                        Description
                    </td>


                </tr>
            </thead>
            <tbody class="reportBody">

                @foreach (var salary in Model.SalarySetup)
                {
                    <tr class="reportTR">
                        <td class="reportTD">
                            @rowCount
                        </td>
                        <td class="reportTD">
                            @(salary.EmployeeGrade.EmployeeType == null ? "" : salary.EmployeeGrade.EmployeeType.Title)
                        </td>
                        <td class="reportTD">
                            @(salary.EmployeeGrade == null ? "" : salary.EmployeeGrade.Name)
                        </td>
                        <td class="reportTD">
                            @salary.GrossSalary
                        </td>
                        <td class="reportTD">
                            @salary.BasicSalary
                        </td>
                        <td class="reportTD">
                            @salary.HouseRent
                        </td>
                        <td class="reportTD">
                            @salary.MedicalAllowance
                        </td>
                        <td class="reportTD">
                            @salary.Conveyance
                        </td>
                        <td class="reportTD">
                            @salary.FoodAllowance
                        </td>
                        <td class="reportTD">
                            @salary.EntertainmentAllowance
                        </td>
                        <td class="reportTD">
                            @(salary.FromDate == null ? "" : salary.FromDate.GetValueOrDefault().ToString("dd/MM/yyy"))
                        </td>
                        <td class="reportTD">
                            @(salary.ToDate == null ? "" : salary.ToDate.GetValueOrDefault().ToString("dd/MM/yyy"))
                        </td>
                        <td class="reportTD">
                            @salary.Description
                        </td>
                    </tr>
                    rowCount += 1;
                }
            </tbody>
        </table>

    </div>
</div>

