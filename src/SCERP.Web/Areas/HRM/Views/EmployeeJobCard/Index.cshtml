                    <td></td>
                    <td></td>
                    <td></td>
                </tr>

                <tr>
                    <td> @Html.Label("End Date") </td>
                    <td>                     
                        @Html.TextBoxFor(x => x.EndDate, new { @class = "datepicker", @data_val = "false", @placeholder = "End Date" })
                    </td>
                    <td> </td>
                    <td></td>
                    <td></td>
                </tr>

                <tr>
                    <td> </td>
                    <td> </td>
                    <td> <button class="search" type="button" onclick=" search('/HRM/EmployeeJobCard/Search', 'EmployeeJobCardForm') " />  </td>
                    <td>@*<img onclick=" search('/HRM/EmployeeJobCard/CreatePdf', 'EmployeeJobCardForm') " title="Pdf preview" src="~/Content/images/Pdf-icon.png" />*@</td>
                    <td></td>
