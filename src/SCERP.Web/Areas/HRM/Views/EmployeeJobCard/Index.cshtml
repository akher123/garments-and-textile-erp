            <h2> Employee Job Card </h2>
        </div>

        <section class="search formCover" style="margin-bottom: 7px; font-size: 12px;">

            <table>             
                <tr>
                    <td> @Html.Label("Employee Card Id") </td>
                    <td>
                        @Html.TextBoxFor(model => model.EmployeeCardId)                       
