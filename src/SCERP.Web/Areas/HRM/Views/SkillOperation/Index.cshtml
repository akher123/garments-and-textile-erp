@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.SkillOperationViewModel

@{
    ViewBag.Title = "Skill Operation";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.SkillOperations.Count > 0) ? "" : "none";
}

@using (Html.BeginForm("Index", "SkillOperation", FormMethod.Get, new { @class = "SkillOperationSearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div style="width:500px; padding-left:340px;">
        <h2>Skill Operation</h2>
    </div>

    <section class="search formCover" style="margin-bottom: 8px;">
        <table class="tabefont">
            <tr>
                <td>
                    @Html.Label("Skill Set Difficulty: ")
                </td>
                <td>
                    @Html.DropDownListFor(x => x.SearchBySkillSetDifficultyId,Model.SkillSetDifficultySelectListItem, "--Select--")
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Skill Set Category: ")
                </td>
                <td>
                    @Html.DropDownListFor(x => x.SearchBySkillCategoryId, Model.SkillSetCategorySelectListItem, "--Select--")
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Skill Operation: ")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.SearchByOperationName)
                </td>
                <td>
                    <input type="button" class="searchAction" />
                </td>
            </tr>

        </table>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/SkillOperation/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.SkillOperations, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("Name", header: "Operation Name"),
                        grid.Column("SkillSetDifficulty.DifficultyName", header: "Difficulty Name", format: @<text>@(item.SkillSetDifficulty == null ? "" : item.SkillSetDifficulty.DifficultyName)</text>),
                        grid.Column("SkillSetCategory.CategoryName", header: "Category Name", format: @<text>@(item.SkillSetCategory == null ? "" : item.SkillSetCategory.CategoryName)</text>),
                        grid.Column("Detail/Edit", format: @<text><button class="edit" action="/HRM/SkillOperation/Edit?SkillOperationId=@item.SkillOperationId"></button></text>, canSort: false),
                        grid.Column("Delete", format: @<text><button class="delete" action="/HRM/SkillOperation/Delete?SkillOperationId=@item.SkillOperationId"></button></text>, canSort: false)));
        }
    </div>

</section>
