@model SCERP.Web.Areas.HRM.Models.ViewModels.SkillOperationViewModel

@{
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
    ViewBag.Title = (Model.SkillOperationId > 0) ? "Edit" : "Add";
}

@using (Html.BeginForm("Save", "SkillOperation", FormMethod.Post, new { @class = "SkillOperationform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.SkillOperationId)

    <fieldset>
        <legend>Skill Operation</legend>
        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
            </tr>

            <tr>
                <td></td>
                <td class="fieldTitleCls">Skill Set Difficulty:</td>
                <td>
                    @Html.DropDownListFor(m=>m.SkillSetDifficultyId, Model.SkillSetDifficultySelectListItem, "-Select-")
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.SkillSetDifficultyId)
                </td>
            </tr>
            <tr>            
                <td></td>
                <td class="fieldTitleCls">Skill Set Category:</td>
                <td>
                    @Html.DropDownListFor(m => m.CategoryId, Model.SkillSetCategorySelectListItem,"-Select-")
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.CategoryId)
                </td>         
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Skill Set Operation:</td>
                <td>
                    @Html.TextBoxFor(model => model.Name)
                </td>
                <td>
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Name)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
                <td></td>
                <td></td>
            </tr>

        </table>
    </fieldset>

}
