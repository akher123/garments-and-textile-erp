@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.EmployeeBankInfoViewModel

@{
    Layout = null;
}

<div class="EmployeeBankInfoDetailContainner">
    @using (Html.BeginForm("Index", "EmployeeBankInfo", FormMethod.Get, new { @class = "EmployeeBankInfoSearchForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset style="margin-top: 10px; margin-right: 10px; margin-bottom: 20px;">
            <legend>Bank Information</legend>

            <div class="additem">
                <div style="margin-bottom: 3px;">
                    <button class="AjaxPopup addButton" action="/HRM/EmployeeBankInfo/Edit">Add New</button>
                </div>
                @{
        var grid = new WebGrid(canPage: false, rowsPerPage: AppConfig.PageSize, canSort: false, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.EmployeeBankInfos, autoSortAndPage: false);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
                        tableStyle: "webgrid-table webgrid",
                        headerStyle: "webgrid-header",
                        footerStyle: "webgrid-footer",
                        alternatingRowStyle: "webgrid-alternating-row",
                        selectedRowStyle: "webgrid-selected-row",
                        rowStyle: "webgrid-row-style",
                        firstText: "First",
                        lastText: "Last",
                        nextText: "Next",
                        mode: WebGridPagerModes.All,
                        previousText: "Previous",
                        columns: grid.Columns(
                           grid.Column("BankName", header: "Bank Name", format: @<text>@(item == null ? "" : item.BankName)</text>),
                           grid.Column("BranchName", header: "Branch Name", format: @<text>@(item == null ? "" : item.BranchName)</text>),
                           grid.Column("BankAccountType.AccountType", header: "Account Type", format: @<text>@(item.BankAccountType == null ? "" : item.BankAccountType.AccountType)</text>),
                           grid.Column("AccountName", header: "Account Name", format: @<text>@(item == null ? "" : item.AccountName)</text>),
                           grid.Column("AccountNumber", header: "Account Number", format: @<text>@(item == null ? "" : item.AccountNumber)</text>),
                           grid.Column("FromDate", header: "From ", format: @<text>@(item.FromDate == null ? "---" : (String.Format("{0:dd/MM/yyyy}", item.FromDate)))</text>),
                           grid.Column("ToDate", header: "To ", format: @<text>@(item.ToDate == null ? "---" : (String.Format("{0:dd/MM/yyyy}", item.ToDate)))</text>),
                           grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/EmployeeBankInfo/Edit/@item.Id"></button></text>),
                           grid.Column("Delete", format:@<text><button class="delete" action="/HRM/EmployeeBankInfo/Delete/@item.Id"></button></text>, canSort: false)))
                }
            </div>
        </fieldset>
    }

</div>