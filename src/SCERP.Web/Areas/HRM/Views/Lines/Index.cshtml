@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.LineViewModel

@{
    ViewBag.Title = "Line";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.Lines.Count > 0) ? "" : "none";
}
<div class="header-title">
    <h2>Line Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("Index", "Lines", FormMethod.Get, new { @class = "LinesSearchForm  ignore-validation" }))
        {
            @Html.HiddenFor(x => x.IsSearch)

           
                <table class="tabefont">
                    <tr>
                        <td>
                            @Html.Label("Line Name: ")
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.SearchByLineName)
                        </td>
                        <td>
                            <input type="button" class="searchAction" />
                        </td>
                    </tr>

                </table>
         
        }
    </div>
</section>
<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/Lines/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Lines, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("Name", header: "Line Name", format: @<text>@(item == null ? "" : item.Name)</text>),
                        grid.Column("Description", header: "Description", format: @<text>@(item == null ? "" : item.Description)</text>),
                        grid.Column("Edit", format: @<text><button class="edit" action="/HRM/Lines/Edit?LineId= @item.LineId"></button></text>, canSort: false),
                        grid.Column("Delete", format: @<text><button class="delete" action="/HRM/Lines/Delete?LineId=@item.LineId"></button></text>, canSort: false)));
        }
    </div>

    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "Lines", new { SearchByLineName = Model.SearchByLineName })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "Lines", new { SearchByLineName = Model.SearchByLineName })" title="Print" src="~/Content/images/print-icon.png" />
    </div>

</section>

