@model SCERP.Web.Areas.HRM.Models.ViewModels.LineViewModel
@{
    Layout = null;
    int rowCount = 1;
}


<div>
    <link href="~/Content/Common/PdfReport.css" rel="stylesheet" />

    <table class="pdfReportTable" style="border: 0;margin-bottom: 5px;">

        <thead class="reportHeader">
            <tr class="reportTitle">
                <td colspan="15" align="center">Line List</td>
            </tr>
            <tr>
                <td class="clsDate">Date:@DateTime.Now.Date.ToString("dd-MM-yyyy")</td>
            </tr>
        </thead>
    </table>

    <table class="pdfReportTable" border="1">
        <thead class="reportThead">
            <tr class="reportTR">
                <td class="reportTH">
                    SL.No
                </td>
                <td class="reportTH">
                    Line Name
                </td>
                <td class="reportTH">
                    Description
                </td>
            </tr>
        </thead>
        <tbody class="reportBody">
            @foreach (var line in Model.Lines)
            {
                <tr class="reportTR">
                    <td class="reportTD">
                        @rowCount
                    </td>
                    <td class="reportTD">
                        @line.Name
                    </td>
                    <td class="reportTD">
                        @line.Description
                    </td>
                </tr>
                rowCount += 1;
            }
        </tbody>
    </table>
</div>