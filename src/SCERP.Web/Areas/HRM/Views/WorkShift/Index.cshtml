@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.WorkShiftViewModel
@{
    ViewBag.Title = "WorkShift";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.WorkShifts.Count > 0) ? "" : "none";
}
@using (Html.BeginForm("Index", "WorkShift", FormMethod.Get, new { @class = "WorkShiftSearchForm submit-allow ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>WorkShift</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Work Shift:")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchKey)
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        </div>
    </section>

}


<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/WorkShift/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.WorkShifts, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                grid.Column("Name"),
                grid.Column("NameInBengali", header: "Name (In Bengali)", canSort: false),
                grid.Column("NameDetail", header: "Name (Detail)", canSort: false),
                grid.Column("NameDetailInBengali", header: "Name Detail (In Bengali)", canSort: false),
                grid.Column("StartTime", header: "Start time", format: @<text>@(item.StartTime == null ? "" : DateTime.Today.Add(item.StartTime).ToString("HH:mm"))</text>),
                grid.Column("EndTime", header: "End time", format: @<text>@(item.StartTime == null ? "" : DateTime.Today.Add(item.EndTime).ToString("HH:mm"))</text>),
                grid.Column("InBufferTime", header: "Buffer In Time (Minutes)", canSort: false),
                grid.Column("MaxBeforeTime", header: "Max Before Time (Minutes)", canSort: false),
                grid.Column("MaxAfterTime", header: "Max After Time (Minutes)", canSort: false),
                grid.Column("ExceededMaxAfterTime", header: "Exceeded Max After Time (Minutes)", canSort: false),
                grid.Column(header: "Edit", format: @<text><button class="edit" action="/HRM/WorkShift/Edit?WorkShiftId=@item.WorkShiftId"></button></text>, canSort: false),
                grid.Column(header: "Delete", format: @<text><button class="delete" action="/HRM/WorkShift/Delete?WorkShiftId=@item.WorkShiftId"></button></text>, canSort: false)
              ))
        }

    </div>
    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "WorkShift", new { IsSearch = Model.IsSearch, SearchKey = Model.SearchKey})"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "WorkShift", new { IsSearch = Model.IsSearch, SearchKey = Model.SearchKey })" title="print" src="~/Content/images/print-icon.png" alt="" />
    </div>
</section>