@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.PenaltyViewModel
@{
    ViewBag.Title = "Penalty";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Index", "Penalty", FormMethod.Get, new { @class = "PenaltyForm ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Penalty List</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table>
                <tr>
                    <td>
                        Criteria :
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @style = "width:250px;", @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>

}


<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/HRM/Penalty/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Penalties, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                  grid.Columns(
                  grid.Column("EmployeeCardId", header: "Employee Card Id"),
                  grid.Column("EmployeeName", header: "Employee Name"),
                  grid.Column("ClaimerName", header: "Claimer Name"),
                  grid.Column("Penalty", header: "Penalty", canSort: false),
                  grid.Column("PenaltyType", header: "Penalty Type"),
                  grid.Column(format: (item) => string.Format("{0:dd-MM-yyyy}", item.PenaltyDate ?? ""), header: "Penalty Date", canSort: true),
                  grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/HRM/Penalty/Edit?PenaltyId=@item.PenaltyId"></button></text>),
                  grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/HRM/Penalty/Delete?PenaltyId=@item.PenaltyId"></button></text>)));
        }
    </div>
</section>