@using SCERP.Common
@model SCERP.Web.Areas.HRM.Models.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var displayStyle = (Model.Departments.Count > 0) ? "" : "none";
}
<div class="header-title">
    <h2>Department Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "Department", FormMethod.Get, new { @class = "DepartmentSearchForm  ignore-validation" }))
        {
            @Html.HiddenFor(x => x.IsSearch)


            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Department Name: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchKey)
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>

        }
    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/HRM/Department/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Departments, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(grid.Column("Name", "Department Name"),
                    grid.Column("Description", "Description", canSort: false),
                    grid.Column("Detail/Edit", format:
                    @<text><button class="edit" action="/HRM/Department/Edit/@item.Id"></button></text>, canSort: false),
                    grid.Column("Delete",format:
                    @<text><button class="delete" action="/HRM/Department/Delete/@item.Id"></button></text>
    , canSort: false)));
        }
    </div>

    <div class="exportReport">
        <a style="display:@displayStyle;" href="@Url.Action("GetExcel", "Department", new { SearchKey = Model.SearchKey })"><img src="~/Content/images/Excel-icon.png" width="30" height="30" title="Export to Excel" /></a>
        <img style="display:@displayStyle;" class="printspecificpagereport" action="@Url.Action("Print", "Department", new { SearchKey = Model.SearchKey })" alt="Print" title="Print" src="~/Content/images/print-icon.png" />
    </div>

</section>

