@using SCERP.Common
@model SCERP.Web.Areas.Commercial.Models.ViewModel.ExportViewModel

@{
    ViewBag.Title = "Exp";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}


@using (Html.BeginForm("Index", "Export", FormMethod.Get, new { @class = "ExportSearchForm ignore-validation" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="header-title">
        <h2> Export (EXP)</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>                       
                        @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", @data_val = "false", @style = "", @placeholder = "From date" })
                    </td>
                    <td>@Html.Label("To")</td>
                    <td>                       
                        @Html.TextBoxFor(x => x.ToDate, new { @class = "datepicker", @data_val = "false", @style = "", @placeholder = "To date" })
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key", @autofocus = "autofocus" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                    <td>
                        <input type="button" value="Exp Report" class="addButton" onclick=" javascript: PrintExportReport(); " />
                        @*<input type="button" value="Commercial Invoice Report" onclick=" javascript: PrintCommercialInvoiceReport(); " />
                        <input type="button" value="Packing List Report" onclick=" javascript: PrintPackingReport(); " /> *@
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Commercial/Export/Edit">Add New</button>
        </div>

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.CommExports, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                    grid.Column("File", format: @<text><input type="button" class="Edit_Button" action="/Commercial/CommFileUpload/Index?RefId=@item.ExportId&SrcType=@Convert.ToInt32(FileSource.Export)" value="Upload" /></text>, canSort: false),
                    grid.Column("COMMLcInfo.LcNo", header: "LC No", format: @<text>@(item.COMMLcInfo.LcNo ?? "--")</text>, canSort: false),
                    grid.Column("ExportNo", header: "Exp No", format: @<text>@(item.ExportNo ?? "--")</text>, canSort: false),
                    grid.Column("InvoiceNo", header: "Invoice No ", format: @<text>@(item.InvoiceNo ?? "--")</text>, canSort: false),
                    grid.Column("InvoiceValue", header: "Invoice Value ", format: @<text>@(item.InvoiceValue ?? "--")</text>, canSort: false),
                    grid.Column("InvoiceDate", "Invoice Date", format: @<text>@(item.InvoiceDate == null ? "" : item.InvoiceDate.ToString("dd-MM-yyyy"))</text>, canSort: false),
                    grid.Column("FDBC/FDBP No", header: "BankRef No ", format: @<text>@(item.BankRefNo ?? "--")</text>, canSort: false),
                    grid.Column("RealizedDate", "Realised Date", format: @<text>@(item.RealizedDate == null ? "" : item.RealizedDate.ToString("dd-MM-yyyy"))</text>, canSort: false),       
                    grid.Column("RealizedValue", header: "Realized Value ", format: @<text>@(item.RealizedValue ?? "--")</text>, canSort: false),
                    grid.Column("BillOfLadingNo", header: "B/L No ", format: @<text>@(item.BillOfLadingNo ?? "--")</text>, canSort: false),
                    grid.Column("Edit", format: @<text> <button class="edit" action="/Commercial/Export/Edit?CommExport.ExportId=@item.ExportId"></button></text>, canSort: false),
                    grid.Column("Commercial", format: @<text> <button class="edit" action="/Commercial/Export/Detail?CommExport.ExportId=@item.ExportId"></button></text>, canSort: false),
                    grid.Column("Packing", format: @<text> <button class="edit" action="/Commercial/Export/DetailPacking?CommExport.ExportId=@item.ExportId"></button></text>, canSort: false),
                    grid.Column("Delete", format: @<text> <button class="delete" action="/Commercial/Export/Delete?CommExport.ExportId=@item.ExportId"></button></text>, canSort: false)))
        }
    </div>
</section>




