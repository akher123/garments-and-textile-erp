                    <td> @Html.Label("LC Type : ") </td>
                    <td> @Html.DropDownListFor(model => model.BbLcType, Model.LcTypeSelectListItem, "-Select-") </td>

                    <td> @Html.Label("LC No : ") </td>
                    <td> @Html.DropDownListFor(model => model.LcRefId, Model.LcSelectListItem, "-Select-") </td>
                </tr>
                <tr>
                    <td> @Html.Label("From Date : ") </td>
                    <td> @Html.EditorFor(x => x.FromDate) </td>

                    <td> @Html.Label("To Date : ") </td>
                    <td> @Html.EditorFor(x => x.ToDate) </td>

                    <td></td>
                    <td>
                        <input type="button" class="searchAction" />
                        @*<input type="button" value="Show Report" class="addButton" onclick=" javascript: PrintReport(); " />*@
