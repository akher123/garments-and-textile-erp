@using SCERP.Common
@model SCERP.Web.Areas.Commercial.Models.ViewModel.ProFormaInvoiceViewModel
@{ ViewBag.Title = "Pro Forma Invoice";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Pro Forma Invoice List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "ProFormaInvoice", FormMethod.Get, new { @class = "ProFormaInvoiceForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Commercial/ProFormaInvoice/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.ProFormaInvoices, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                grid.Columns(
                    grid.Column("PiRefId", header: "RefId"),
                    grid.Column("PiNo", header: "PI No"),
                    grid.Column("Mrc_SupplierCompany.CompanyName", header: "Suppier"),
                    //grid.Column("BookingNo", header: "Booking No"),
                    grid.Column("ReceivedDate", canSort: false, header: "Received Date", format: @<text>@(item.ReceivedDate == null ? "" : item.ReceivedDate.ToString("dd-MM-yyyy"))</text>),
                    @*grid.Column("EndDate", canSort: false, header: "Exp Date", format: @<text>@(item.EndDate == null ? "" : item.EndDate.ToString("dd-MM-yyyy"))</text>),*@
                    grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Commercial/ProFormaInvoice/Edit?ProFormaInvoice.PiId=@item.PiId"></button></text>),
                    grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Commercial/ProFormaInvoice/Delete?PiId=@item.PiId"></button></text>)))

            ;
        }
    </div>
</section>





