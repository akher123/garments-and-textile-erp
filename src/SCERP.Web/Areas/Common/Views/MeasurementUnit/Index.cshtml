@using SCERP.Common
@model SCERP.Web.Areas.Common.Models.ViewModel.MeasurementUnitViewModel
@{
    ViewBag.Title = "PurchaseType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2>Measurement Unit Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("Index", "MeasurementUnit", FormMethod.Get, new { @class = "MeasurementUnitSearchForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Measurement Unit:")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.UnitName, new { @data_val = "false" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>

        }
    </div>
</section>
<section class="search formCover">
    <div class="additem">
        <div style="margin-bottom: 3px;">
            <button class="AjaxPopup addButton" action="/Common/MeasurementUnit/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.MeasurementUnits, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(grid.Column("UnitName", header: "Measurement Unit"),
            grid.Column("Description", header: "Description"),
            grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Common/MeasurementUnit/Edit?UnitId=@item.UnitId"></button></text>),
            grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/Common/MeasurementUnit/Delete?UnitId=@item.UnitId"></button></text>)));
        }
    </div>
</section>

