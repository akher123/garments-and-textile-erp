@using SCERP.Common
@model SCERP.Web.Areas.Common.Models.ViewModel.EmailTemplateUserViewModel
@{
    ViewBag.Title = "Mail Tempalte User";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Mail Template User Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "EmailTemplateUser", FormMethod.Get, new { @class = "EmailUserSearchForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                    <td>
                        <a href="/Production/ProductionReport/MailDailyProductionStatus" target="_blank">PRDUCTION STATUS MAIL</a>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Common/EmailTemplateUser/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.EmailTemplateUsers, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                                 grid.Column("EmailTemplate.EmailTemplateName", header: "Email Template"),
                        grid.Column("EmailUser.EmailUserName", header: "User Name"),
                        grid.Column("EmailUser.EmailAddress", header: "EmailAddress"),
                        grid.Column("SendingType", header: "SendingType"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Common/EmailTemplateUser/Edit?TemplateUser.EmailTamplateUserId=@item.EmailTamplateUserId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Common/EmailTemplateUser/Delete?TemplateUser.EmailTamplateUserId=@item.EmailTamplateUserId"></button></text>)))
            ;
        }
    </div>
</section>

