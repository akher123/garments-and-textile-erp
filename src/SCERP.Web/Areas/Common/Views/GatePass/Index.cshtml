@using SCERP.Common
@model SCERP.Web.Areas.Common.Models.ViewModel.GatePassViewModel
@{
    ViewBag.Title = "Gate Pass";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="header-title">
    <h2>GENERAL GATE PASS LIST</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "GatePass", FormMethod.Get, new {@class = "GatePassForm ignore-validation"}))
        {
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Common/GatePass/Edit">Add New</button>
        </div>
        <div>
            @{
                var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
                grid.Bind(Model.GatePasses, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);
                @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("RefId", header: "Ref Id"),
                        grid.Column("BillNo", header: "BillNo", canSort: false),
                        grid.Column("ChallanNo", header: "ChallanNo", canSort: false),
                        grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.ChallanDate ?? ""), header: "Challan Date"),
                        grid.Column("PartyName", header: "M/S", canSort: false),
                        grid.Column("Designation", header: "Through", canSort: false),
                        grid.Column("Remarks", header: "Remarks", canSort: false),
                        grid.Column("Edit", canSort: false, format: @<text><button class="edit" action="/Common/GatePass/Edit?GatePass.GatePassId=@item.GatePassId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Common/GatePass/Delete?GatePassId=@item.GatePassId"></button></text>),
                        grid.Column("Gate Pass", format:@<text> <a href="/Common/GatePass/GatePassReport?GatePassId=@item.GatePassId" target="_blank">Print</a> </text>, canSort: false)))

            }
        </div>
    </div>
</section>







