@model SCERP.Web.Areas.Common.Models.ViewModel.ColorViewModel
@{
    ViewBag.Title = Model.ColorId > 0 ? "Edit " : "Add ";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}
@using (Html.BeginForm("Save", "Color", FormMethod.Post, new { @class = "Colorform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ColorId)

    <fieldset>
        <legend>Color</legend>
        <table class="tabefont">
            <tr>
                <td></td>
                <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new { @class = "labelInstruction" })</td>
            </tr>
            <tr>
                <td >
                    @Html.Label("Name :")
                </td>
                <td>

                    @Html.TextBoxFor(x => x.ColorName)

                </td>
                <td >
                    @Html.Label("*", new { @class = "labelInstruction" })
                </td>
                <td>
                    @Html.ValidationMessageFor(x => x.ColorName)
                </td>
            </tr>
            <tr>
                <td  >
                    @Html.Label("Code:")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.ColorCode)
                </td>
                <td ></td>
            </tr>
            <tr>
                <td >
                    @Html.Label("Ref No:")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.ColorRef, new { @style = "background-color:#708090" ,@readonly="readonly"})
                </td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.SaveButton()
                </td>
            </tr>
        </table>

    </fieldset>
}




