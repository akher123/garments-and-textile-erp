@model SCERP.Model.Acc_OpeningClosing

@{
    ViewBag.Title = Model.Id > 0 ? "Edit Opening Balance" : "Add Opening Balance";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}

@using (Html.BeginForm("Save", "OpeningBalance", FormMethod.Post, new {@class = "openingbalance"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CDT)
    @Html.HiddenFor(model => model.EDT)
    @Html.HiddenFor(model => model.EditedBy)
    @Html.HiddenFor(model => model.CreatedBy)

    <table class="tableFont" style="width: 450px; height: 300px;">
        
        <tr>
            <td>&nbsp;</td>
            <td align="left" colspan="4">@Html.Label("Fields with asterisk(*) mark are mandatory", new {@class = "labelInstruction"})</td>
        </tr>
        
        <tr>
            <td>&nbsp;</td>
            <td class="fieldTitleCls">Financial Period</td>
            <td>
                @Html.DropDownListFor(model=>model.FpId, null,"- Select -")
            </td>
            <td>
                @Html.Label("*", new {@class = "labelInstruction"})
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.FpId)
            </td>
        </tr>
                
        <tr>
            <td>&nbsp;</td>
            <td class="fieldTitleCls">Sector Name</td>
            <td>
                @Html.DropDownListFor(model => model.SectorId, null, "- Select -")             
            </td>
            <td>
                @Html.Label("*", new {@class = "labelInstruction"})
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.SectorId)
            </td>
        </tr>
        
        <tr>
            <td>&nbsp;</td>
            <td class="fieldTitleCls">Account Name</td>
            <td>   
                @Html.DropDownListFor(model => model.GlId, null, "- Select -")
            </td>
            <td>
                @Html.Label("*", new {@class = "labelInstruction"})
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.GlId)
            </td>
        </tr>
                                  
        <tr>
            <td>&nbsp;</td>
            <td class="fieldTitleCls">Debit</td>
            <td>
                @Html.TextBoxFor(model => model.Debit)
            </td>
            <td>
               
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Debit)
            </td>
        </tr>
        
        <tr>
            <td>&nbsp;</td>
            <td class="fieldTitleCls">Credit</td>
            <td>
                @Html.TextBoxFor(model => model.Credit)
            </td>
            <td>
             
            </td>
            <td>
                @Html.ValidationMessageFor(model => model.Credit)
            </td>
        </tr>               

        <tr>
            <td style="width: 5px;">
                &nbsp;
            </td>
            <td style="width: 150px;">
                &nbsp;
            </td>
            <td style="width: 300px;">
                @Html.SaveButton()
            </td>
            <td style="width: 1px;">
                &nbsp;
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
        
        <tr>
            <td style="height: 20px;"></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>

    </table>
}


<script type="text/javascript">

    $(document).ready(function() {

        $('#Debit').keyup(function() {
            this.value = this.value.replace(/[^0-9\.]/g, '');
            $('#Credit').val('');
        });

        $('#Credit').keyup(function() {
            this.value = this.value.replace(/[^0-9\.]/g, '');
            $('#Debit').val('');
        });
                                  
    });

</script>