@model SCERP.Web.Areas.Accounting.Models.ViewModels.FinancialPeriodViewModel
@{
    ViewBag.Title = "Financial Period ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2>Financial Period</h2>
</div>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Accounting/FinancialPeriod/Edit">Add new</button>
        </div>
        @{
        var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: false, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.FinancialPeriod, rowCount: Model.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns: grid.Columns(
                grid.Column(header: "Index", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                grid.Column("PeriodName", header: "Period Name"),
                grid.Column("PeriodStartDate", header: "Start Date", format: @<text>@(item.PeriodStartDate == null ? "" : item.PeriodStartDate.ToString("dd/MM/yyyy"))</text>),
                grid.Column("PeriodEndDate", header: "End Date", format: @<text>@(item.PeriodEndDate == null ? "" : item.PeriodEndDate.ToString("dd/MM/yyyy"))</text>),
                grid.Column("ActiveStatus", header: "Active Status"),
                grid.Column(header: "Edit", format: @<text><button class="edit" action="/Accounting/FinancialPeriod/Edit/@item.Id"></button></text>),
                grid.Column( header:"Delete", format:@<text><button class="delete" action="/Accounting/FinancialPeriod/Delete/@item.Id"></button></text>)
                ));
        }
    </div>
</section>