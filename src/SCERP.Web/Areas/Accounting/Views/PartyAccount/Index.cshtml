@using SCERP.Common
@model  SCERP.Web.Areas.Accounting.Models.ViewModels.PartyAccountViewModel
@{
    ViewBag.Title = "Party";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Party Account Mapping</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "PartyAccount", FormMethod.Get, new { @class = "PartySearchForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>

                    <td>@Html.Label("Party Type")</td>
                    <td>
                        @Html.DropDownListFor(x => x.Party.PType, Model.PTypeSelectListItem)
                    </td>

                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        }
    </div>
</section>

<section class="search formCover">
    <div class="additem">

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Parties, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("PartyRefNo", header: "Ref No"),
            grid.Column("Name", header: "Name"),
            grid.Column("KnittingAcName", header: "Knitting Payable Account"),
            grid.Column("KnittingRcvAcName", header: "Knitting Receivable Account"),
            grid.Column("DyeingAcName", header: "Dyeing GL"),
            grid.Column("PrintPayAcName", header: "Print Payable Account"),
            grid.Column("EmPayAcName", header: "Emb Payable Account"),
            grid.Column("MappingGL", canSort: false, format: @<text><button class="edit" action="/Accounting/PartyAccount/Update?PartyId=@item.PartyId"></button></text>)));

        }
    </div>
</section>

