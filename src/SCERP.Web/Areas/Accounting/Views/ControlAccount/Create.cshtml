@model  SCERP.Model.Acc_ControlAccounts
@{
    ViewBag.Title = "Add account head";
    Layout = "~/Views/Shared/_Layout.Dialog.cshtml";
}
<style type="text/css">
    input[readonly="readonly"] {
        background-color: #b0c4de;
    }
</style>
@using (Html.BeginForm("SaveControlAccount", "ControlAccount", new { @class = "ControlAccountForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.SortOrder)
    @Html.HiddenFor(model => model.ControlLevel)
    @Html.HiddenFor(model => model.IsActive)
    <div>
        <table style="width: 400px;" class="tabefont">
            <tr>
                <td></td>
                <td class="fieldTitleCls">Parent Code</td>
                <td>
                    @Html.TextBoxFor(model => model.ParentCode, new {@readonly = "readonly"})
                    @Html.ValidationMessageFor(model => model.ParentCode)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Parent Name</td>
                <td>                
                    @Html.TextBox("ParentName", null, new { @class = "ParentNameClass" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Control Code</td>
                <td>
                    @Html.TextBoxFor(model => model.ControlCode, new { @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.ControlCode)
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="fieldTitleCls">Control Name</td>
                <td>
                    @Html.TextBoxFor(model => model.ControlName)
                    @Html.ValidationMessageFor(model => model.ControlName)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    <input type="button" id="saveControlAccount" value="save" />
                </td>
            </tr>
            @Html.Partial("~/Views/Shared/_CustomError.cshtml")
        </table>
    </div>

}
@section scripts
{
    <script type="text/javascript">
       
        $('#ControlName').keyup(function () {

            $('#ControlName').css('border-color', '');
        });
