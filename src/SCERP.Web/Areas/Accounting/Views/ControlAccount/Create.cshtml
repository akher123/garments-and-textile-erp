                    "ParentCode": $('#ParentCode').val(),
                    "ControlCode": $('#ControlCode').val(),
                    "ControlName": $('#ControlName').val(),
                    "SortOrder": $('#SortOrder').val(),
                    "ControlLevel": $('#ControlLevel').val()
                };
                $.ajax({
                    url: '/Accounting/ControlAccount/SaveControlAccount',
                    data: accControlAccount,
                    type: 'POST',
                    success: function (data) {
                        if (data.Success == false && data.Success != 'undefined' && data.Error == true && data.Error != 'undefined') {
                            $('.errorMessage').append(data.Message);

                        } else {
