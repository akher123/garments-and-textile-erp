                            //    '_' +
                            //    data.ParentCode +
                            //    '_' +
                            //    data.ControlCode +
                            //    '_' +
                            //    data.ControlLevel +
                            //    '_' +
                            //    data.SortOrder +
                            //    '" class="chartofAcc" style="color: blue"> ' +
                            //    data.ControlName +
                            //    '</span>';
                            //if (accControlAccount.Id.length > 0) {
                            //    $(this).replaceWith(li);
                            //} else {
                            //    $('#' + data.ParentCode).append(li);
                            //}

                           loadAction("/Accounting/ControlAccount/ChartOfAccount");// for reload
                            $('#event_result').dialog('close');
                            $('#event_result').dialog('destroy').remove();
                        }

                    }
                });
            }

        });

        var parentCode = $('#ParentCode').val();

        $.ajax({
            url: '/Accounting/ControlAccount/GetParentName',
            data: {
                "parentCode": parentCode
            },
                      
            type: 'POST',
            success: function (data) {
                if(data.Success)
                    $('#ParentName').val(data.Message);
            }
        });
 
    </script>  
}


