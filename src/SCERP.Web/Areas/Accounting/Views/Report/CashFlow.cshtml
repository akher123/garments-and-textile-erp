@model SCERP.Web.Areas.Accounting.Models.ViewModels.TrialBalanceViewModel
@{
    ViewBag.Title = "Cash Flow";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2>Cash Flow</h2>
</div>

@using (Html.BeginForm("CashFlow", "Report", FormMethod.Get, new { @class = "BalanceSheetForm submit-allow ignore-validation" }))
{
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">

                @Html.Partial("~/Areas/Accounting/Views/Shared/_FinancialPeriod.cshtml")

                <tr>
                    <td>@Html.DisplayName("Print Format: ") </td>
                    <td>@Html.DropDownList("PrintFormatId", null, new { style = "" })</td>

                    <td>@Html.DisplayName("Company Name: ")</td>
                    <td>@Html.DropDownList("sectorId", null, "- Select -", new { @onchange = "getCostCentreBySector(this.value)", style = "", @disabled = "disabled" })</td>

                    <td></td>
                    <td>
                        <button class="search" type="button" onclick="search('/Accounting/Report/CashFlow', 'BalanceSheetForm')" />
                        <input id="btnPrint" class="addButton" type="button" onclick="javascript: PrintBalanceSheet();" value="Print" />
                    </td>
                </tr>

            </table>
        </div>
    </section>
}
<section class="search formCover">
    <div class="additem">
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: false, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.TrialBalance, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                    grid.Column(header: "Index", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                    grid.Column("GrouplHead", header: "Flow"),
                    grid.Column("ControlHead", header: "Control Head"),
                    grid.Column("Particulars", header: "Particulars"),
                    grid.Column("CurrentYear", header: "Current Year"),
                    grid.Column("PrevYear", header: "Previous Year")

                    ));
        }


    </div>

</section>

    @section scripts
{
        <script type="text/javascript">
            function PrintBalanceSheet() {
                var FpId = $('#FpId').val();
                var SectorId = $('#sectorId').val();
                var fromDate = $('#FromDate').val();
                var toDate = $('#ToDate').val();
                var SectorText = $("#sectorId option:selected").text();
                var FileType = $('#PrintFormatId option:selected').text();
                window.open("/Accounting/Report/PrintCashFlow?FpId=" + FpId + "&SectorId=" + SectorId + "&SectorText=" + SectorText + "&fromDate=" + fromDate + "&toDate=" + toDate + "&ExportType=" + FileType);
            }
        </script>
    }

