    @section scripts
    {
<script type="text/javascript">


    $('body').on('keydown', 'input, select, textarea', function (e) {
        var self = $(this)
            , form = self.parents('form:eq(0)')
            , focusable
            , next
            ;
        if (e.keyCode == 13) {
            focusable = form.find('input,a,select,button,textarea').filter(':visible');
            next = focusable.eq(focusable.index(this) + 1);
            if (next.length) {
                next.focus();
            } else {
                form.submit();
            }
            return false;
        }
    });


    function PrintGL() {
        var FpId = $('#FpId').val();
        var SectorId = $('#sectorId').val();
        var GlId = $('#GlId').val().replace(/[_\W]+/g, "-");
        var fromDate = $('#FromDate').val();
        var toDate = $('#ToDate').val();
        var SectorText = $("#sectorId option:selected").text();
        var FileType = $('#PrintFormatId option:selected').text();
        window.open("/Accounting/Report/ControlSummaryPrint?FpId=" + FpId + "&SectorId=" + SectorId + "&SectorText=" + SectorText + "&fromDate=" + fromDate + "&toDate=" + toDate + "&GlId=" + GlId + "&ExportType=" + FileType);
    }

    function getCostCentreBySector(sectorId) {   // This is for cascade dropdown

        var url = "/BankVoucherEntry/GetCostCentreBySector";
        $.ajax({
            url: url,
            type: "get",
            data: { "sectorId": sectorId },
            dataType: 'json',
            success: function (data) {
                if (data.length != 0) {

                    var items = "<option value='" + 0 + "'>" + " -Select - " + "</option>";

                    $.each(data, function (i, costCentre) {

                        items += "<option value='" + costCentre.Id + "'>" + costCentre.CostCentreName + "</option>";
                    });
                    $('.CostCentre').html(items);
                } else {
                    var items = '<option>Not found</option>';
                    $('.CostCentre').html(items);
                }
            }
        });
    }

    var temp = $('#GlId').val();
    if (temp == 0)
        $('#GlId').val('');

    $('.AccountName').autocomplete(
        {
            source: '@Url.Action("ControlSummarySearch", "Report")'
        });

</script>
    }

