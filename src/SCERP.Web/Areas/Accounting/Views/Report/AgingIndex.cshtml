@model SCERP.Web.Areas.Accounting.Models.ViewModels.TrialBalanceViewModel

@{
    ViewBag.Title = "Aging Report";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2> Aging Report </h2>
</div>

@using (Html.BeginForm("AgingIndex", "Report", FormMethod.Get, new { @class = "AgingForm submit-allow ignore-validation" }))
{
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">

                <tr>
                    <td> @Html.DisplayName("Company Name: ") </td>
                    <td> @Html.DropDownList("sectorId", null, "- Select -", new { style = "", @disabled = "disabled" }) </td>
                    <td> @Html.DisplayName("From Date : ") </td>
                    <td> @Html.TextBoxFor(x => x.FromDate, new { @class = "datepicker", placeholder = "From Date" }) </td>                                    
                </tr> 
                <tr>
                    <td> @Html.DisplayName("Print Format: ") </td>
                    <td> @Html.DropDownList("PrintFormatId", null, new { style = "" }) </td>
                    <td> </td>
                    <td> <input id="btnPrint" class="addButton" type="button" onclick="javascript: PrintAging();" value="Print" /> </td>                                            
                </tr>        
            </table>
        </div>
    </section>
}

@section scripts
{
    <script type="text/javascript">

            function PrintAging() {
                var SectorId = $('#sectorId').val();
                var fromDate = $('#FromDate').val();
                var toDate = $('#ToDate').val();
                var FpId = $('#FpId').val();
                var ControlHead = $('#ControlHead').val();
                var Note = $('#Note').val();
                var FileType = $('#PrintFormatId option:selected').text();

                window.open("/Accounting/Report/Aging?SectorId=" + SectorId + "&fromDate=" + fromDate + "&ExportType=" + FileType);
            }
  
    </script>
}