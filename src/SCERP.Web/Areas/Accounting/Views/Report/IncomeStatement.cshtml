@model SCERP.Web.Areas.Accounting.Models.ViewModels.TrialBalanceViewModel
@{
    ViewBag.Title = "Income Statement";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2>Income Statement</h2>
</div>

@using (Html.BeginForm("IncomeStatement", "Report", FormMethod.Get, new { @class = "IncomeStatementForm submit-allow ignore-validation" }))
{

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">

                @Html.Partial("~/Areas/Accounting/Views/Shared/_FinancialPeriod.cshtml")

                <tr>
                    <td> @Html.DisplayName("Print Format: ") </td>
                    <td> @Html.DropDownList("PrintFormatId", null, new { style = "" }) </td>

                    <td>@Html.DisplayName("Company Name: ")</td>
                    <td>@Html.DropDownList("sectorId", null, "- Select -", new { style = "", @disabled = "disabled" })</td>
                    
                    <td>@Html.DisplayName("Show: ")</td>
                    @*<td>@Html.DropDownList("OpeningOption", "- Select -")</td>*@

                    <td>
                        <button class="search" type="button" onclick="search('/Accounting/Report/IncomeStatement', 'IncomeStatementForm')" />
                        <input id="btnPrint" class="addButton" type="button" onclick="javascript: PrintIncomeStatement();" value="Print" />
                    </td>
                </tr>

            </table>
        </div>
    </section>

}

<section class="search formCover">
<div class="additem">
    @{
        var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: false, ajaxUpdateContainerId: "grid");
        grid.Bind(Model.TrialBalance, rowCount: Model.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);
        @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns: grid.Columns(
                grid.Column(header: "Index", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                grid.Column("ClasslHead", header: "Main Head"),
                grid.Column("GrouplHead", header: "Group Head"),
                grid.Column("SubGrouplHead", header: "Sub Group Head"),
                grid.Column("Particulars", header: "Particulars"),
                grid.Column("TotalCredit", header: "Amount", format: @<text>@(item.TotalCredit == 0 ? "" : item.TotalCredit)</text>),

                grid.Column("Detail", format:@<text>

                    @if (!String.IsNullOrEmpty(item.Particulars))
                    {
                        <button class="edit" action="/Accounting/Report/IncomeStatementDetail?subGroupCode=@item.SubGroupCode&sectorId=@Model.SectorId&toDate=@Model.ToDate&fromDate=@Model.FromDate"></button>
                    }

                </text>, canSort: false)
                ));
}
</div>
</section>

    @section scripts
{
        <script type="text/javascript">
            function PrintIncomeStatement() {
                var FpId = $('#FpId').val();
                var SectorId = $('#sectorId').val();
                var OpOption = 2;
                var fromDate = $('#FromDate').val();
                var toDate = $('#ToDate').val();
                var SectorText = $("#sectorId option:selected").text();
                var FileType = $('#PrintFormatId option:selected').text();
                window.open("/Accounting/Report/PrintIncomeStatement?FpId=" + FpId + "&SectorId=" + SectorId + "&SectorText=" + SectorText + "&fromDate=" + fromDate + "&toDate=" + toDate + "&openingOption=" + OpOption + "&ExportType=" + FileType);
            }

            //var columns = $('.additem td:nth-child(6),td:nth-child(7),th:nth-child(6),th:nth-child(7)');
            //$('#OpeningOption').openingOptionState(columns);
            //$('#OpeningOption').openingOption(columns);

        </script>
    }







