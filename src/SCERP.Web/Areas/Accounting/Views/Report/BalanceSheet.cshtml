@using System.Globalization
@model SCERP.Web.Areas.Accounting.Models.ViewModels.TrialBalanceViewModel

@{
    ViewBag.Title = "Balance Sheet";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="header-title">
    <h2>Balance Sheet</h2>
</div>

@using (Html.BeginForm("BalanceSheet", "Report", FormMethod.Get, new {@class = "BalanceSheetForm submit-allow ignore-validation"}))
{

    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                
                @Html.Partial("~/Areas/Accounting/Views/Shared/_FinancialPeriodBalanceSheet.cshtml")
                
                <tr>                    
                    <td>@Html.DisplayName("Print Format: ")</td>
                    <td>@Html.DropDownList("PrintFormatId", null, new { style = "" })</td>                                                                   

                    <td>@Html.DisplayName("Company Name: ")</td>
                    <td>@Html.DropDownList("sectorId", null, "- Select -", new { style = "", @disabled = "disabled" })</td>

                    <td></td>
                    <td>
                        <button class="search" type="button" onclick=" search('/Accounting/Report/BalanceSheet', 'BalanceSheetForm') " />
                        <input id="btnPrint" class="addButton" type="button" onclick=" javascript: PrintBalanceSheet(); " value="Print" />
                    </td>
                </tr>

            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">

        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: 10, canSort: false, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.TrialBalance, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);

            @grid.GetHtml(htmlAttributes: new { id = "grid" },

                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                    grid.Column(header: "Index", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                    grid.Column("ClasslHead", header: "Main Head"),
                    grid.Column("GrouplHead", header: "Group Head"),
                    grid.Column("SubGrouplHead", header: "Particulars"),
                    grid.Column("ClosingBalance", header: "Current Year"),
                    grid.Column("PrevYear", header: "Prevous Year"),
                    grid.Column("SubGroupCode", header: "SubGroupCode"),
                    grid.Column("Detail", format:@<text>  
                                                           
                        @if (item.SubGroupCode != null)
                        {
                            <button class="edit" action="/Accounting/Report/BalanceSheetDetail?subGroupCode=@item.SubGroupCode&sectorId=@Model.SectorId&toDate=@Model.ToDate&fromDate=@Model.FromDate"></button>
                        }
                        
                    </text>, canSort: false)

                    ));
}
    </div>

</section>

    @section scripts
    {
        <script type="text/javascript">
            function PrintBalanceSheet() {

                var FpId = $('#FpId').val();
                var SectorId = $('#sectorId').val();
                var fromDate = $('#FromDate').val();
                var toDate = $('#ToDate').val();
                var SectorText = $("#sectorId option:selected").text();
                var FileType = $('#PrintFormatId option:selected').text();
                window.open("/Accounting/Report/PrintBalanceSheet?FpId=" + FpId + "&SectorId=" + SectorId + "&SectorText=" + SectorText + "&fromDate=" + fromDate + "&toDate=" + toDate + "&ExportType=" + FileType);
            }
        </script>
    }
