@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.GroupChallanViewModel
@{ ViewBag.Title = "Group Challan";
 Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Group Challan List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "GroupChallan", FormMethod.Get, new {@class = "GroupChallanForm submit-allow"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/GroupChallan/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.GroupChallans, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("RefId", header: "RefId"),
                        grid.Column("Name", header: "Group Name"),
                        grid.Column("GDate", header: "Date", format: @<text>@(item.GDate == null ? "" : item.GDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Inventory/GroupChallan/Edit?GroupChallan.GroupChallanId=@item.GroupChallanId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Inventory/GroupChallan/Delete?GroupChallanId=@item.GroupChallanId"></button></text>),
                       grid.Column("Export", format: @<text> <a href="/Inventory/GroupChallan/GroupChallanReport?GroupChallanId=@item.GroupChallanId" target="_blank">Print</a> </text>, canSort: false)));
       
        }
    </div>
</section>





