@using System.ServiceModel.Activities.Configuration
@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.BookingViewModel
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="header-title">
    <h2>Accessories Booking List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "Booking", FormMethod.Get, new {@class = "BookingSearchForm ignore-validation"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <table>
                <tr>
                    <td>
                        @Html.Label("Booking :")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.FromDate, new {@class = "datepicker", @data_val = "false", @placeholder = "From date"})
                    </td>

                    <td>
                        @Html.TextBoxFor(x => x.ToDate, new {@class = "datepicker", @data_val = "false", @placeholder = "To date"})
                    </td>

                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>

                    <td>
                        <input type="button" class="searchAction"/>
                        <input type="button" class="addButton" target="_blank" onclick="BookingSummary(this)" value="BK Summary"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/Booking/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Bookings, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                    tableStyle: "webgrid-table webgrid",
                    headerStyle: "webgrid-header",
                    footerStyle: "webgrid-footer",
                    alternatingRowStyle: "webgrid-alternating-row",
                    selectedRowStyle: "webgrid-selected-row",
                    rowStyle: "webgrid-row-style",
                    firstText: "First",
                    lastText: "Last",
                    nextText: "Next",
                    mode: WebGridPagerModes.All,
                    previousText: "Previous",
                    columns: grid.Columns(
                    grid.Column("BookingRefId", canSort: false, header: "RefNo", format: @<text>@(item.BookingRefId ?? "--")</text>),
                    grid.Column("OM_Merchandiser.EmpName", canSort: false, header: "Merchandiser", format: @<text>@(item.OM_Merchandiser.EmpName ?? "--")</text>),
                    grid.Column("OM_Buyer.BuyerName", canSort: false, header: "Buyer", format: @<text>@(item.OM_Buyer.BuyerName ?? "--")</text>),
                    grid.Column("OrderNo", canSort: false, header: "OrderNo ", format: @<text>@(item.OrderNo ?? "")</text>),
                    grid.Column("StyleNo", canSort: false, header: "StyleNo ", format: @<text>@(item.StyleNo ?? "")</text>),
                    grid.Column("OrderQty", canSort: false, header: "OrderQty ", format: @<text>@(item.OrderQty ?? "")</text>),
                    grid.Column("BookingDate", canSort: false, header: "Date", format: @<text>@(item.BookingDate == null ? "" : item.BookingDate.ToString("dd-MM-yyyy"))</text>),
                    grid.Column("Mrc_SupplierCompany.CompanyName", canSort: false, header: "Supplier", format: @<text>@(item.Mrc_SupplierCompany.CompanyName ?? "--")</text>),
                    grid.Column("StoreId", canSort: false, header: "Store", format: @<text>@(((StoreType)item.StoreId).ToString())</text>),
                    grid.Column("Edit", format:@<text> <button class="edit" action="/Inventory/Booking/Edit?Booking.BookingId=@item.BookingId"></button> </text>, canSort: false),
                    grid.Column("Delete", format:@<text> <button class="delete" action="/Inventory/Booking/Delete?BookingId=@item.BookingId"></button></text>, canSort: false),
                    grid.Column("PDF", format:@<text> <a href="/Inventory/Booking/BookingPdfReport?BookingId=@item.BookingId" target="_blank">Print</a> </text>, canSort: false)));
        }

    </div>
</section>



<script type="text/javascript">
  
    function BookingSummary(obj) {
        var form = $(obj).parents('form:first');
        if (jQuery.validator && jQuery.validator.unobtrusive) {
            form.validate();
            if (!form.valid()) {
                e.preventDefault();
                return false;
            } else {
                var data = form.serialize();
                var searchurl = '/Inventory/Booking/BookingSummary?' + data;
                window.open(searchurl);
            }
        }


    }
</script>