@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.ReceiveAgainstPoViewModel
@{
    ViewBag.Title = "YarnReceive";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
@section styles
{
    <link href="~/Content/Common/SingleDropdownMenu.css" rel="stylesheet" />
}

<div class="header-title">
    <h2>Yarn Receive</h2>
</div>

<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "PiYarnReceive", FormMethod.Get, new {@class = "PiYarnReceiveSearchForm ignore-validation"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <table>
                <tr>
                    <td>
                        @Html.Label("MRR Date :")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.FromDate, new {@class = "datepicker", @data_val = "false", @placeholder = "From date"})
                    </td>

                    <td>
                        @Html.TextBoxFor(x => x.ToDate, new {@class = "datepicker", @data_val = "false", @placeholder = "To date"})
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>

                    <td>
                        <input type="button" class="searchAction"/>
                        <input type="button" class="addButton" target="_blank" onclick="MrrSummary(this)" value="Summary"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/PiYarnReceive/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.ReceiveAgainstPos, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns: grid.Columns(
                    grid.Column("RefNo", canSort: false, header: "RefNo", format: @<text>@(item.RefNo ?? "--")</text>),
                    grid.Column("PONo", canSort: false, header: "PoNo ", format: @<text>@(item.PoNo ?? "")</text>),
                    grid.Column("InvoiceNo", canSort: false, header: "InvoiceNo ", format: @<text>@(item.InvoiceNo ?? "")</text>),
                    grid.Column("Mrc_SupplierCompany.CompanyName", canSort: false, header: "Supplier", format: @<text>@(item.Mrc_SupplierCompany.CompanyName ?? "--")</text>),
                    grid.Column("TotalAmount", canSort: false, header: "Amount ", format: @<text>@(item.TotalAmount ?? "")</text>),
                    grid.Column("QcStatus", canSort: false, header: "QcStatus", format: @<text>@(item.QcStatus ? "Sent" : "UnSent")</text>),
                    grid.Column("GrnStatus", canSort: false, header: "GrnStatus", format: @<text>@(item.GrnStatus ? "Sent" : "UnSent")</text>),
                    grid.Column("Edit", format:@<text> <button class="edit" action="/Inventory/PiYarnReceive/Edit?ReceiveAgainstPo.MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId"></button> </text>, canSort: false),
                    grid.Column("Delete", format:@<text> <button class="delete" action="/Inventory/PiYarnReceive/Delete?MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId"></button></text>, canSort: false),
                    grid.Column("Update", canSort: false, format: @<text>
                        <div class="dropdown" @*style="float: right"*@>
                            <a @*style="clear: both"*@ class="dropbtn custom-table-dropbtn">Convert</a>
                            <div class="dropdown-content custom-table-dropdown-content">
                                <a style="cursor: pointer" class="AjaxPopup" action="/Inventory/PiYarnReceive/EditQc?ReceiveAgainstPo.MaterialReceiveAgstPoId=@item.Materialreceiveagstpoid">QC</a>
                                <a style="cursor: pointer" class="AjaxPopup" action="/Inventory/PiYarnReceive/EditGrn?ReceiveAgainstPo.MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId">GRN</a>
                            </div>
                        </div> </text>),
            grid.Column("Report", format:@<text>
                        <div class="dropdown" @*style="float: right;"*@>
                            <a class="dropbtn custom-table-dropbtn">Show</a>
                            <div class="dropdown-content custom-table-dropdown-content">
                                <a href="/Inventory/YarnReceive/MaterialReceivedAgainstPoOrBookingReport?MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId&Key=MRR" target="_blank">MRR</a>
                                <a href="/Inventory/YarnReceive/MaterialReceivedAgainstPoOrBookingReport?MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId&Key=QC" target="_blank">QC</a>
                                <a href="/Inventory/YarnReceive/MaterialReceivedAgainstPoOrBookingReport?MaterialReceiveAgstPoId=@item.MaterialReceiveAgstPoId&Key=GRN" target="_blank">GRN</a>
                            </div>
                        </div>
            </text>, canSort: false)

         ));
        }

    </div>
</section>



@section scripts
{<script type="text/javascript">

    function MrrSummary(obj) {
        var form = $(obj).parents('form:first');
        if (jQuery.validator && jQuery.validator.unobtrusive) {
            form.validate();
            if (!form.valid()) {
                e.preventDefault();
                return false;
            } else {
                var data = form.serialize();
                var searchurl = '/Inventory/YarnReceive/MrrSummaryReport?' + data;
                window.open(searchurl);
            }
        }
    }


   
</script>

    
}




