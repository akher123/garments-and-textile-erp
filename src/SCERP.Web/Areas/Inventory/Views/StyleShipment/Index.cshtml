@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.StyleShipmentViewModel
@{
    ViewBag.Title = "StyleShipment";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="header-title">
    <h2>Shipment Informations</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "StyleShipment", FormMethod.Get, new {@class = "StyleShipmentForm ignore-validation"}))
        {
            @Html.HiddenFor(x => x.IsSearch)

            <table>
                <tr>
                    <td>
                        @Html.Label("Buyer")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.StyleShipment.BuyerRefId, Model.BuyerSelectListItem, "-Select-", new {@class = "StyleShipment_buyerRefId"})
                    </td>

                    <td>
                        @Html.Label("Invoice No")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.searchKey)
                    </td>

                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                    <td>
                        <input type="button" class="addButton" onclick="shipStatusReport()" value="Status"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <input onclick="search('/Inventory/StyleShipment/Edit?StyleShipment.StyleShipmentId=0')" value="Add New" class="addButton" type="button" />
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.StyleShipments, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                  grid.Columns(

                  grid.Column("StyleShipmentRefId", canSort: false, header: "Ref No."),
                  grid.Column("BuyerName", canSort: false, header: "Buyer"),
                  grid.Column("RefNo", canSort: false, header: "Order"),
                  grid.Column("StyleName", canSort: false, header: "Style"),
                  grid.Column("InvoiceNo", canSort: false, header: "Invoice No"),
                  grid.Column("InvoiceDate", canSort: false, header: "InvoiceDate", format: @<text>@(item.InvoiceDate == null ? "" : item.InvoiceDate.ToString("dd-MM-yyyy"))</text>),
                  grid.Column("Through", canSort: false, header: "Through"),
                  grid.Column("ThroughCellNo", canSort: false, header: "Through Phone"),
                  grid.Column("DriverName", canSort: false, header: "Driver Name"),
                  grid.Column("DriverCellNo", canSort: false, header: "Driver Phone"),
                  grid.Column("ShipmentMode", canSort: false, header: "Shipment Mode"),
                  grid.Column("Edit", canSort: false, format: @<text><input type="button" class="addButton" onclick="search('/Inventory/StyleShipment/Edit?StyleShipment.StyleShipmentId=@item.StyleShipmentId')" value="Edit" /></text>),
                  grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Inventory/StyleShipment/Delete?StyleShipmentId=@item.StyleShipmentId"></button></text>),
                  grid.Column("Report", format:@<text><a href="/Inventory/StyleShipment/ShipmentDeliveryChalan?styleShipmentId=@item.StyleShipmentId" target="_blank">Challan</a></text>, canSort: false)))
        }
    </div>
</section>


<script type="text/javascript">

    function shipStatusReport() {
        var form = $('.StyleShipmentForm');
        var data = form.serialize();
        var searchurl = '/Inventory/StyleShipment/ShipmentStatus? ' + data;
        window.open(searchurl);

    }

</script>