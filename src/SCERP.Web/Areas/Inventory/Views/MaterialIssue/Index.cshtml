@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.MaterialIssueViewModel
@{
    ViewBag.Title = "MaterialIssue";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";

}

@using (Html.BeginForm("Index", "MaterialIssue", FormMethod.Get, new { @class = "MaterialIssueSearchForm ignore-validation" }))
{
    @Html.HiddenFor(x => x.IsSearch)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="width:500px; padding-left:340px;">
        <h2>Material Issue  </h2>
    </div>
    <section class="search formCover" style="margin-bottom: 3px;">
        <table class="tabefont">
            @{Html.RenderPartial("~/Areas/Inventory/Views/MaterialIssue/_SearchMaterialIssue.cshtml", Model); }
        </table>
    </section>
}
<section class="search formCover">
    <div class="additem">
        <div style="width: 1024px; overflow: auto">
            @{
                var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
                grid.Bind(Model.VMaterialIssues, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);
                @grid.GetHtml(htmlAttributes: new { id = "grid" },
                    tableStyle: "webgrid-table webgrid",
                    headerStyle: "webgrid-header",
                    footerStyle: "webgrid-footer",
                    alternatingRowStyle: "webgrid-alternating-row",
                    selectedRowStyle: "webgrid-selected-row",
                    rowStyle: "webgrid-row-style",
                    firstText: "First",
                    lastText: "Last",
                    nextText: "Next",
                    mode: WebGridPagerModes.All,
                    previousText: "Previous",
                    columns: grid.Columns(
                        grid.Column("IssueReceiveNoteNo", header: "Issue Req.NoteNo", format: @<text>@(item.IssueReceiveNoteNo ?? "--")</text>),
                        grid.Column("IssueReceiveNoteDate", header: "Issue Req.Note date", format: @<text>@(item.IssueReceiveNoteDate == null ? "" : item.IssueReceiveNoteDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("IssueReceiveNo", header: "Issue Req.No ", format: @<text>@(item.IssueReceiveNo ?? "--")</text>),
                        grid.Column("IssueReceiveDate", header: "Issue Req. date", format: @<text>@(item.IssueReceiveDate == null ? "" : item.IssueReceiveDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("PreparedByEmployeeName", header: "PreparedBy", format: @<text>@(item.PreparedByEmployeeName ?? "--")</text>),
                        grid.Column("UnitName", header: "Unit ", format: @<text>@(item.UnitName ?? "")</text>),
                        grid.Column("DepartmentName", header: "Department ", format: @<text>@(item.DepartmentName ?? "")</text>),
                        grid.Column("SectionName", header: "Section ", format: @<text>@(item.SectionName ?? "--")</text>),
                        grid.Column("Line", header: "Line ", format: @<text>@(item.LineName ?? "--")</text>),
                        grid.Column("Note", header: "Remarks ", format: @<text>@(item.Note ?? "--")</text>),
                        grid.Column("Detail/Edit", format:@<text>
                        <input type="button" onclick="search('@Url.Action("Edit", "MaterialIssue", new { MaterialIssueId = item.MaterialIssueId })')" value="Edit" />
                        </text>, canSort: false),
                        grid.Column("Delete",format:@<text><button class="delete" action="/Inventory/MaterialIssue/Delete?MaterialIssueId=@item.MaterialIssueId"></button></text>, canSort: false)
   ));
            }
        </div>
    </div>
</section>




