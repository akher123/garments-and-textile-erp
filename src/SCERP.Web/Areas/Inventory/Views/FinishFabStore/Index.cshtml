@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.FinishFabStoreViewModel
@{
    ViewBag.Title = "FinishFabStore";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<div class="header-title">
    <h2>Finish Fabric Store</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "FinishFabStore", FormMethod.Get, new {@class = "finishFabStoreForm ignore-validation"}))
        {
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/FinishFabStore/Edit">Add New</button>
        </div>
        <div>
            @{
                var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
                grid.Bind(Model.FinishFabStores, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);
                @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                       grid.Column("FinishFabRefId", header: "Ref Id"),
                       grid.Column("RcvRegNo", header: "RcvRegNo", canSort: false),
                       grid.Column("GateEntryNo", header: "GEN", canSort: false),
                       grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.GateEntryDate ?? ""), header: "GEDate"),
                       grid.Column("InvoiceNo", header: "InvoiceNo", canSort: false),
                       grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.InvoiceDate ?? ""), header: "Invocie Date"),
                       grid.Column("PROD_DyeingSpChallan.Party.Name", header: "Party", canSort: false),
                       grid.Column("PROD_DyeingSpChallan.DyeingSpChallanRefId", header: "Challan No", canSort: false),
                       grid.Column("Remarks", header: "Remarks", canSort: false),
                       grid.Column("Edit", canSort: false, format: @<text><button class="edit" action="/Inventory/FinishFabStore/Edit?FinishFabbricStore.FinishFabStoreId=@item.FinishFabStoreId&FinishFabbricStore.DyeingSpChallanId=" @item.DyeingSpChallanId></button></text>),
                       grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Inventory/FinishFabStore/Delete?FinishFabStoreId=@item.FinishFabStoreId"></button></text>)))

            }
        </div>
    </div>
</section>



