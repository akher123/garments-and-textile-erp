@model SCERP.Web.Areas.Inventory.Models.ViewModels.MaterialIssueViewModel 
@{
    Layout = null;
}
<tr id="newRow-@Model.MaterialIssueDetails[Model.Key].ItemId">
    <td>
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].MaterialIssueDetailId, new { @class = "mIDetailId-" + @Model.MaterialIssueDetails[Model.Key].ItemId })
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].MaterialIssueId)
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].ItemId)
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].ItemName)
    </td>
 
    <td>
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].SizeId)
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].SizeName)
    </td>
    <td>
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].BrandId)
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].BrandName)
    </td>
    <td>
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].OriginId)
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].OriginName)
    </td>
    <td>
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].MachineId)
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].MachineName)
    </td>
    <td>
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].StockInHand)
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].StockInHand)
    </td>
    <td>
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].RequiredQuantity)
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].RequiredQuantity)
    </td>
    <td>
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].IssuedQuantity)
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].IssuedQuantity)
    </td>
    <td>
        @Html.DisplayFor(x => x.MaterialIssueDetails[Model.Key].IssuedItemRate)
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].IssuedItemRate)
    </td>
    <td>
        @Html.ValueFor(x => x.MaterialIssueDetails[Model.Key].Remarks, "{0:dd/MM/yyyy}")
        @Html.HiddenFor(x => x.MaterialIssueDetails[Model.Key].Remarks)
    </td>

    <td>
        <input type="button" value="X" onclick="deleteRow(this)" />
    </td>
</tr>

