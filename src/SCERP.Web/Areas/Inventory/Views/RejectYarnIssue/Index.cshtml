@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.RejectYarnIssueViewModel
@{
    ViewBag.Title = "Reject Yarn Issue";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
@section styles
{
    <link href="~/Content/Common/SingleDropdownMenu.css" rel="stylesheet" />
}
@using (Html.BeginForm("Index", "RejectYarnIssue", FormMethod.Get, new { @class = "RejectYarnIssueForm" }))
{
    @Html.HiddenFor(x => x.IsSearch)
    <div class="header-title">
        <h2>Reject Yarn Issue List</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>@Html.Label("From")</td>
                    <td>
                        @Html.TextBoxFor(x => x.FromDate, new { @data_val = "false", @placeholder = "Date", @class = "datepicker" })
                    </td>
                    <td>@Html.Label("To")</td>
                    <td>
                        @Html.TextBoxFor(x => x.ToDate, new { @data_val = "false", @placeholder = "Date", @class = "datepicker" })
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>

                </tr>
            </table>
        </div>
    </section>
}
<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/RejectYarnIssue/Edit?rejectYarnIssueId=0">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.RejectYarnIssues, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                    grid.Column("RefId", header: "Ref No"),
                    grid.Column("ChallanNo", header: "Challan No"),
                    grid.Column("IssueDate", header: "IssueDate", format: @<text>@(item.IssueDate == null ? "" : item.IssueDate.ToString("dd-MM-yyyy"))</text>),
                    grid.Column("Remarks", header: "Remarks "),
                    grid.Column("Report", canSort: false, format:@<text><a href="/Inventory/RejectYarnIssue/RejectYarnReport?rejectYarnIssueId=@item.RejectYarnIssueId" target="_blank">PDF</a></text>),
                    grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Inventory/RejectYarnIssue/Edit?RejectYarnIssueId=@item.RejectYarnIssueId"></button></text>),
                    grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Inventory/RejectYarnIssue/Delete?RejectYarnIssueId=@item.RejectYarnIssueId"></button></text>)))
            ;
        }
    </div>

</section>
