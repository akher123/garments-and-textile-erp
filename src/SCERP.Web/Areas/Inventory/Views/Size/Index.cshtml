@using SCERP.Common
@model SCERP.Web.Areas.Inventory.Models.ViewModels.SizeViewModel
@{
    ViewBag.Title = "Size";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using (Html.BeginForm("Index", "Size", FormMethod.Get, new { @class = "SizeSearchForm submit-allow" }))
{
    @Html.HiddenFor(x => x.IsSearch)

    <div class="header-title">
        <h2>Inventory Material Size</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Size: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SizeName, new {@data_val = "false", @placeholder = "Search By Size"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        </div>
    </section>

}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Inventory/Size/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.InventorySizes, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("Title",header: "Size"),
            grid.Column("Description", header: "Description"),
            grid.Column("Detail/Edit",canSort:false,format:@<text><button class="edit" action="/Inventory/Size/Edit?SizeId=@item.SizeId"></button></text>),
            grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/Inventory/Size/Delete?SizeId=@item.SizeId"></button></text>)));
        }
    </div>
</section>

