@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.HourViewModel
@{ ViewBag.Title = "Hour";
 Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Hour List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "Hour", FormMethod.Get, new {@class = "HourForm submit-allow"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Production/Hour/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Hours, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("HourRefId", header: "RefId"),
                        grid.Column("HourName", header: "Hour"),
                        grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Production/Hour/Edit?Hour.HourId=@item.HourId"></button></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/Hour/Delete?HourId=@item.HourId"></button></text>)))
            ;
        }
    </div>
</section>





