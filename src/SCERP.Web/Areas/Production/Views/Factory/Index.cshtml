@using SCERP.Common
@model SCERP.Web.Areas.Common.Models.ViewModel.PartyViewModel
@{
    ViewBag.Title = "Factory";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Factory</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "Factory", FormMethod.Get, new {@class = "FactorySearchForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Name, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Production/Factory/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Parties, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("Name", header: "Factory"),
            grid.Column("Address", header: "Address"),
            grid.Column("Email", header: "Email"),
            grid.Column("Phone", header: "Phone"),
            grid.Column("ContactPersonName", header: "ContactPerson"),
            grid.Column("ContactPhone", header: "Contact Phone"),
            grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Production/Factory/Edit?PartyId=@item.PartyId"></button></text>),
            grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/Factory/Delete?partyId=@item.PartyId"></button></text>)));
        }
    </div>
</section>

