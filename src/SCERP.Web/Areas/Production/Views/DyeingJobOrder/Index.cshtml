@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.DyeingJobOrderViewModel
@{
    ViewBag.Title = "Dyeing Job Order";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Dyeing Job Order Information</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        @using (Html.BeginForm("Index", "DyeingJobOrder", FormMethod.Get, new { @class = "DyeingJobOrderForm ignore-validation" }))
        {
            @Html.HiddenFor(x => x.IsSearch)
        <table class="tabefont">
            <tr>
                <td>@Html.Label("From")</td>
                <td>
                    @Html.TextBoxFor(x => x.FromDate, new { @data_val = "false", @placeholder = "Date", @class = "datepicker" })
                </td>
                <td>@Html.Label("To")</td>
                <td>
                    @Html.TextBoxFor(x => x.ToDate, new { @data_val = "false", @placeholder = "Date", @class = "datepicker searchEnterKeyAction" })
                </td>
                <td>
                    @Html.Label("Criteria")
                </td>
                <td>
                    @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search key" })
                </td>
                <td>
                    <input type="button" class="searchAction" />
                </td>
            </tr>
        </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="addButton" onclick="search('/Production/DyeingJobOrder/Edit')">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.JobOrders, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column(header: "Report", canSort: false, format: @<text><a href="/Production/DyeingJobOrder/DyeingJobOrderReport?DyeingJobOrderId=@item.DyeingJobOrderId" target="_blank">PDF</a></text>),
                        grid.Column("JobRefId", header: "JobRefId"),
                        grid.Column("WorkOrderNo", header: "Work OrderNo"),
                        grid.Column("JobDate", header: "Job Date", format: @<text>@(item.JobDate == null ? "" : item.JobDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("DeliveryDate", header: "Delivery Date", format: @<text>@(item.DeliveryDate == null ? "" : item.DeliveryDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("Party.Name", header: "Party "),
                        grid.Column("BuyerName", header: "Buyer"),
                        grid.Column("OrderName", header: "Order"),
                        grid.Column("StyleName", header: "Style"),
                        grid.Column("Remarks", header: "Remarks"),
                        grid.Column("Edit", canSort: false, format: @<text><input type="button" class="addButton" onclick="search('/Production/DyeingJobOrder/Edit?JobOrder.DyeingJobOrderId=@item.DyeingJobOrderId')" value="Edit"/></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/DyeingJobOrder/Delete?DyeingJobOrderId=@item.DyeingJobOrderId"></button></text>)))
            ;
        }
    </div>
</section>
