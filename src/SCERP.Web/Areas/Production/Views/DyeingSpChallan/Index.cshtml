@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.DyeingSpChallanViewModel
@{
    ViewBag.Title = "DyeingSpChallan";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
@section styles
{
    <link href="~/Content/Common/SingleDropdownMenu.css" rel="stylesheet" />
}
<div class="header-title">
    <h2>Dyeing Finishing</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "DyeingSpChallan", FormMethod.Get, new {@class = "DyeingSpChallanForm"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("From Date")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.FromDate, new {@class = "datepicker", @data_val = "false", @placeholder = "From Date"})
                    </td>
                    <td>
                        @Html.Label("To Date")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.ToDate, new {@class = "datepicker", @data_val = "false", @placeholder = "To Date"})
                    </td>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <input onclick="search('/Production/DyeingSpChallan/Edit?DyeingSpChallan.DyeingSpChallanId=0')" value="Add New" class="addButton" type="button"/>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.DyeingSpChallans, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("DyeingSpChallanRefId", canSort: false, header: "RefId"),
                        grid.Column("Party.Name", canSort: false, header: "Factory"),
                        grid.Column("ChallanNo", canSort: false, header: "Challan No"),
                        grid.Column("ChallanDate", canSort: false, header: "Challan Date", format: @<text>@(item.ChallanDate == null ? "" : item.ChallanDate.ToString("dd-MM-yyyy"))</text>),
                        grid.Column("ExpDate", canSort: false, header: "Exp Date", format: @<text>@(item.ExpDate == null ? "" : item.ExpDate.ToString("dd-MM-yyyy"))</text>),
                        //grid.Column("Remarks", canSort: false, header: "Remarks"),
                        grid.Column("Edit", canSort: false, format: @<text><input type="button" class="addButton" onclick="search('/Production/DyeingSpChallan/Edit?DyeingSpChallan.DyeingSpChallanId=@item.DyeingSpChallanId')" value="Edit"/></text>),
                        grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/DyeingSpChallan/Delete?DyeingSpChallanId=@item.DyeingSpChallanId"></button></text>),
                        grid.Column("Report", format:@<text>
                                                         <div class="dropdown">
                                                             <a class="dropbtn custom-table-dropbtn">Challan</a>
                                                             <div class="dropdown-content custom-table-dropdown-content">

                                                                 @if (item.ParyId != 30216)
                                                                 {
                                                                     <a href="/Production/ProductionReport/GetDyeingSpChallan?DyeingSpChallanId=@item.DyeingSpChallanId&&reportName=EX" target="_blank">Party Challan</a>
                                                                 }
                                                                 else
                                                                 {
                                                                     <a href="/Production/ProductionReport/GetDyeingSpChallan?DyeingSpChallanId=@item.DyeingSpChallanId&&reportName=IN" target="_blank">Store Challan</a>
                                                                 }

                                                             </div>
                                                         </div>
                                                      </text>, canSort: false)))
            ;
        }
    </div>
</section>




