@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.CuttingTagViewModel
@{
    Layout = null;
}
<fieldset>
    <legend>Tag Setup</legend>
    <div class="additem">
        <div class="addButton-wrapper">
            <input type="button" value="AddNew" class="AjaxPopup addButton" action="/Production/CuttingTag/Edit?CuttingTag.CuttingSequenceId=@Model.CuttingTag.CuttingSequenceId" />
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.CuttingTags, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                  grid.Columns(
                  grid.Column("ComponentName", header: "Tag", canSort: false),
                  grid.Column(format: (item) => item.IsSolid == false ? "No" : "Yes", header: "Solid"),
                  grid.Column(format: (item) => item.IsPrint == false ? "No" : "Yes", header: "Print"),
                  grid.Column(format: (item) => item.IsEmbroidery == false ? "No" : "Yes", header: "Embroidery"),
                  grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Production/CuttingTag/Edit?CuttingTag.CuttingTagId=@item.CuttingTagId"></button></text>),
                  grid.Column("Add", canSort: false, format: @<text><button class="btnDetail" targentclass="tagSupplierContainer" action="/Production/CuttingTag/GetCuttingTagSupplier?CuttingTagSupplier.CuttingTagId=@item.CuttingTagId"></button></text>),
                  grid.Column("Delete",canSort:false,format:@<text><button class="deleteAction" targentclass="tagListContainer" action="/Production/CuttingTag/Delete?CuttingTag.CuttingTagId=@item.CuttingTagId"></button></text>)));
        }
    </div>
</fieldset>
