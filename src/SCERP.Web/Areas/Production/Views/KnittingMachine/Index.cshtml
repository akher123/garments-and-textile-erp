@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.MachineViewModel
@{
    ViewBag.Title = "Color";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using (Html.BeginForm("Index", "KnittingMachine", FormMethod.Get, new { @class = "MachineSearchForm submit-allow" }))
{
    @Html.HiddenFor(x => x.IsSearch)
    <div class="header-title">
        <h2>Machine</h2>
    </div>
    <section class="common-search-section">
        <div class="search formCover common-search-wrapper">
            <table>
                <tr>
                    <td>
                        <label>Filter:</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.Name, new { @data_val = "false", @placeholder = "Criteria" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        </div>
    </section>
}

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Production/KnittingMachine/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Machines, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("Name", header: "Machine"),
            grid.Column("ProcessorName",canSort:false, header: "Processor"),
            grid.Column("EfficiencyPer",canSort:false, header: "Eff.Per",format: @<text>@(String.Format("{0:0.00}", item.EfficiencyPer))</text>),
            grid.Column("RatedCapacity", canSort:false,header: "RatedCapacity",format: @<text>@(String.Format("{0:0.00}", item.RatedCapacity))</text>),
            grid.Column("IdelPer",canSort:false, header: "IdelPer",format: @<text>@(String.Format("{0:0.00}", item.IdelPer))</text>),
            grid.Column("Description",canSort:false, header: "Description"),
            grid.Column("Detail/Edit",canSort:false,format:@<text><button class="edit" action="/Production/KnittingMachine/Edit?MachineId=@item.MachineId"></button></text>),
            grid.Column("Delete",canSort:false,format:@<text><button class="delete" action="/Production/KnittingMachine/Delete?MachineId=@item.MachineId"></button></text>)));
        }
    </div>
</section>

