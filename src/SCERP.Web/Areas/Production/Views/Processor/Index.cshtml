@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.ProcessorViewModel
@{
    ViewBag.Title = "Processor";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Processor List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "Processor", FormMethod.Get, new {@class = "ProcessorSearchForm submit-allow"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Production/Processor/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Processors, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("ProcessorRefId", header: "Ref No"),
            grid.Column("ProcessName", header: "Process"),
            grid.Column("ProcessorName", header: "Processor"),
            grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Production/Processor/Edit?ProcessorId=@item.ProcessorId"></button></text>),
            grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/Processor/Delete?ProcessorRefId=@item.ProcessorRefId"></button></text>)));

        }
    </div>
</section>