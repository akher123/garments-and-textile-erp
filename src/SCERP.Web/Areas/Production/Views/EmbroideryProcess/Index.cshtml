@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.ProcessDeliveryViewModel
@{
    ViewBag.Title = "Embroidery Delivery";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="header-title">
    <h2>Embroidery Delivery List</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("Index", "EmbroideryProcess", FormMethod.Get, new {@class = "EmbroideryProcessSearchForm ignore-validation"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>@Html.Label("Factory  :")</td>
                    <td>
                        @Html.DropDownListFor(x => x.Delivery.PartyId, Model.PartySelectListItem, "-Select-")
                    </td>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>
                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <input onclick="search('/Production/EmbroideryProcess/Edit')" value="Add New" class="addButton" type="button" />
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Deliveries, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
            tableStyle: "webgrid-table webgrid",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            firstText: "First",
            lastText: "Last",
            nextText: "Next",
            mode: WebGridPagerModes.All,
            previousText: "Previous",
            columns:
            grid.Columns(
            grid.Column("RefNo", header: "RefNo", canSort: false),
            grid.Column("BuyerName", header: "BUYER", canSort: false),
            grid.Column("OrderName", header: "ORDER", canSort: false),
            grid.Column("OrderName", header: "STYLE", canSort: false),
            grid.Column("PartyName", header: "Factory", canSort: false),
            grid.Column("InvoiceNo", header: "Invoice No", canSort: false),
            grid.Column("InvDate", canSort: false, header: "Invoice Date", format: @<text>@(item.InvDate == null ? "" : item.InvDate.ToString("dd-MM-yyyy"))</text>),
            grid.Column("Delete", canSort: false, format: @<text><button class="delete" action="/Production/EmbroideryProcess/Delete?ProcessDeliveryId=@item.ProcessDeliveryId"></button></text>),
            grid.Column(header: "Chalan", canSort: false, format: @<text><a href="/Production/ProductionReport/DeliveryChalan?processDeliveryId=@item.ProcessDeliveryId&ProcessRefId=@item.ProcessRefId&DeliveryType=1" target="_blank">PDF</a></text>),
            grid.Column(header: "Gate Pass", canSort: false, format: @<text><a href="/Production/ProductionReport/DeliveryChalan?processDeliveryId=@item.ProcessDeliveryId&ProcessRefId=@item.ProcessRefId&DeliveryType=2" target="_blank">PDF</a></text>)));

        }
    </div>
</section>