@using SCERP.Common
@model SCERP.Web.Areas.Production.Models.CuttFabRejectViewModel
@{
    ViewBag.Title = "Fabric Reject";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Cutting Fabric Status</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">

        @using (Html.BeginForm("Index", "CuttFabReject", FormMethod.Get, new { @class = "CuttFabRejectSearchForm" }))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table>
                <tr>
                    <td>
                        @Html.Label("Criteria")
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new { @data_val = "false", @placeholder = "Search Key" })
                    </td>
                    <td>
                        <input type="button" class="searchAction" />
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        <div class="addButton-wrapper">
            <button class="AjaxPopup addButton" action="/Production/CuttFabReject/Edit">Add New</button>
        </div>
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.CuttFabRejects, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new { id = "grid" },
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
               grid.Columns(
               grid.Column("CuttFabRejectId", header: "RefNo"),
               grid.Column("BuyerName", header: "Buyer"),
               grid.Column("OrderName", header: "Order"),
               grid.Column("StyleName", header: "Style"),
                   grid.Column("ChallanNo", header: "Cutt Job No"),  
               grid.Column("BatchNo", header: "Batch No"),
               grid.Column("ColorName", header: "Color"),
               grid.Column("ItemName", header: "Fabric Type"),
               grid.Column("CuttingWit", header: "Wistage(Kg)"),
               grid.Column("RejectWit", header: "RejectFab(Kg)"),
                
               grid.Column("Detail/Edit", canSort: false, format: @<text><button class="edit" action="/Production/CuttFabReject/Edit?CuttFabReject.CuttFabRejectId=@item.CuttFabRejectId"></button></text>),
               grid.Column("Delete", canSort: false, format:@<text><button class="delete" action="/Production/CuttFabReject/Delete?CuttFabRejectId=@item.CuttFabRejectId"></button></text>)));

        }
    </div>
</section>