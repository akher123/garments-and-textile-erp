@using SCERP.Common
@using WebGrease
@model SCERP.Web.Areas.Production.Models.BatchViewModel
@{
    ViewBag.Title = "Batch";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<div class="header-title">
    <h2>Batch Load and Unload</h2>
</div>
<section class="common-search-section">
    <div class="search formCover common-search-wrapper">
        
        @using (Html.BeginForm("BatchInActive", "Batch", FormMethod.Get, new {@class = "BatchForm ignore-validation"}))
        {
            @Html.HiddenFor(x => x.IsSearch)
            <table class="tabefont">
                <tr>
                    <td>
                        @Html.Label("Status")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.BatchStatus, Model.BatchStatuSelectListItem, "-Select-")
                    </td>

                    <td>
                        @Html.Label("Batch Type ")
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.BtType, Model.BatchTypeSelectListItem)
                    </td>

                    <td>
                        @Html.Label("*", new {@class = "labelInstruction"})
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.SearchString, new {@data_val = "false", @placeholder = "Search key"})
                    </td>

                    <td>
                        <input type="button" class="searchAction"/>
                    </td>
                </tr>
            </table>
        }

    </div>
</section>

<section class="search formCover">
    <div class="additem">
        @{
            var grid = new WebGrid(canPage: true, rowsPerPage: AppConfig.PageSize, canSort: true, ajaxUpdateContainerId: "grid");
            grid.Bind(Model.Batches, rowCount: Model.TotalRecords, autoSortAndPage: false);
            grid.Pager(WebGridPagerModes.All);
            @grid.GetHtml(htmlAttributes: new {id = "grid"},
                tableStyle: "webgrid-table webgrid",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                selectedRowStyle: "webgrid-selected-row",
                rowStyle: "webgrid-row-style",
                firstText: "First",
                lastText: "Last",
                nextText: "Next",
                mode: WebGridPagerModes.All,
                previousText: "Previous",
                columns:
                    grid.Columns(
                        grid.Column("BtRefNo", header: "Ref No"),
                        grid.Column("BatchNo", header: "Batch No"),
                        grid.Column(header: "Status", format: (item) =>(BatchStatus)item.BatchStatus),
                        grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.LoadingDateTime ?? ""), header: "Loading Date"),
                        grid.Column(format: (item) => string.Format("{0:hh:mm tt}", item.LoadingDateTime ?? ""), header: "L.. Time"),
                        grid.Column(format: (item) => string.Format("{0:dd-MMM-yyyy}", item.UnLoadingDateTime ?? ""), header: "UnLoading Date"),
                        grid.Column(format: (item) => string.Format("{0:hh:mm tt}", item.UnLoadingDateTime ?? ""), header: "Un.. Time"),
                        grid.Column("BillRate", header: "Rate"),
                        grid.Column("ShadePerc", header: "Shade(%)"),
                        grid.Column("BatchQty", header: "Qty"),
                        grid.Column("Edit", canSort: false, format:@<text><button class="edit" action="/Production/Batch/UpdateBatchStatus?Batch.BatchId=@item.BatchId"></button></text>)))

        }
    </div>
</section>

@section scripts{


    <script type="text/javascript">
        function InActiveBatch(chechBox) {
            var $chechBox = $(chechBox);
            var batchId = $chechBox.val();
            $.Ajax({
                url: '/Batch/SaveInActiveBatch',
                data: { batchId: batchId },
                type: 'post'
            });
        }

    </script>
}