@{
    Layout = null;
}

<style type="text/css">
    .label-primary {
        background-color: #428bca;
    }

    .label {
        display: inline;
        padding: .2em .6em .3em;
        font-size: 11px;
        font-weight: bold;
        line-height: 1;
        color: #fff;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25em;
    }

    .fetchers-wrapper, .right-sidebar-wrapper {
        margin: 20px 10px;
    }

    .right-sidebar-wrapper {
        color: #ffffff;
        background: #eeeeee;
    }

        .right-sidebar-wrapper h4 {
            margin: 0;
            padding: 10px 15px;
            background: #0f467a;
            border-radius: 3px;
        }

    .notification-item {
        overflow-y: auto;
        padding: 10px 0;
        border-bottom: 3px solid #e7e7e7;
        /*border-radius: 3px;*/
        border-left: 2px solid #e7e7e7;

    }

        .notification-item:after {
            content: '';
            display: block;
            clear: both;
        }

        .notification-item ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

            .notification-item ul li {
                position: relative;
            }

                .notification-item ul li a {
                    display: block;
                    padding: 5px 15px;
                    color: #333;
                    background: #eeeeee;
                    text-decoration: none;
                }

                .notification-item ul li:hover a {
                    color: #282828;
                }

            .notification-item ul ul {
                display: block;
                left: 0;
                top: 100%;
                width: 100%;
                z-index: 999999;
            }

            .notification-item ul li:hover > ul {
                display: block;
            }

            .notification-item ul ul li {
                position: relative;
            }

                .notification-item ul ul li a {
                    padding-left: 5%;
                }

                .notification-item ul ul li:hover a {
                    background-color: #dbdbdb;
                }

    .cus-width {
        /*min-width:125px;
        display: inline-block;*/
        margin-right: 5px;
    }
</style>
